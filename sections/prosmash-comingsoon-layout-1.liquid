        "label": "Inverted",
        "default": false
      },
      {
        "type": "url",
        "id": "facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "url",
        "id": "twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "url",
        "id": "instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "url",
        "id": "youtobe_link",
        "label": "Youtobe link"
      },
      {
        "type": "url",
        "id": "pinterest_link",
        "label": "Pinterest link"
      }
	]
  }
{% endschema %}