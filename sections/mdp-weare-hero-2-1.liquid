{{ "mdp-weare-hero-2-1.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp mdp-weare-hero-2 lazyload {% if section.settings.inverted_herotwo %}mdp-inverted{% endif %} {% if section.settings.backed_herotwo %}mdp-backed{% endif %}"
     data-variant="{{ section.settings.variant_herotwo }}"
        {% unless section.settings.image_herotwo == blank %}
            data-bgset="{{ section.settings.image_herotwo | img_url: section.settings.image_size_herotwo }}"
        {% endunless %}
     style="padding-top: 0; padding-bottom: 0; margin-top: {{ section.settings.margin_top_herotwo }}px; margin-bottom: {{ section.settings.margin_bottom_herotwo }}px; background-repeat: no-repeat; background-size: {{ section.settings.background_size_herotwo }};">
    <div class="{% if section.settings.boxed == true %}mdp-container{% endif %} mdp-grid"
         data-columns="1" data-gap="30"
         {% if section.settings.boxed == false %}
         style="background-color: {{ section.settings.background_image_herotwo }};"{% endif %}>
        <div class="mdp-data mdp-data-hero-2-1"
             style="{% if section.settings.boxed == true %}
                     background-color: {{ section.settings.background_image_herotwo }};
             {% endif %}
                     padding-top: {{ section.settings.padding_top_herotwo }}px;
                     padding-bottom: {{ section.settings.padding_bottom_herotwo }}px;">
                <div class="mdp-header">
                    <h3 class="mdp-title-hero-2-1"
                        style="{% if section.settings.use_local_styles == true %}
                                color: {{ section.settings.heading_color_herotwo }};
                        {% endif %}
                                margin-left: {{ section.settings.heading_margin_left_herotwo }}px;">
                        <a href="{{ section.settings.title_link }}">{{ section.settings.title_herotwo }}</a>
                    </h3>
                </div>

                {% if section.settings.content_herotwo != blank %}
                    <div>
                        {{ section.settings.content_herotwo }}
                    </div>
                {% endif %}

                {% if section.settings.link_herotwo != blank %}
                    <div class="mdp-footer">
                        <a class="mdp-button"
                           href="{{ section.settings.link_herotwo }}">{{ section.settings.button_string_herotwo }}</a>
                    </div>
                {% endif %}

                {% if section.settings.subscribe_herotwo == true %}
                    <div class="mdp-signup-form">
                        {% form "customer" %}
                            {{ form.errors | default_errors }}
                            <input type="hidden" name="contact[tags]" value="newsletter">
                            <div class="mdp-row">
                                <input type="email" placeholder="Subscribe by email" name="contact[email]"/>
                                <button type="submit" class="mdp-submit">Submit</button>
                            </div>
                        {% endform %}
                    </div>
                {% endif %}
        </div>
    </div>
</div>

{% if section.settings.use_local_styles == true %}
    <style>
        .mdp-weare-hero-2[data-variant=left_text] .mdp-data-hero-2-1 div p,
        .mdp-weare-hero-2[data-variant=center_text] .mdp-data-hero-2-1 div p,
        .mdp-weare-hero-2[data-variant=right_text] .mdp-data-hero-2-1 div p {
            color: {{section.settings.text_color_herotwo}};
        }
    </style>
{% endif %}

{% schema %}
