    {
      "type": "select",
      "id": "variant_herotwo",
      "label": "Variant",
      "default": "left_text",
      "options": [
        {
          "label": "Left text",
          "value": "left_text"
        },
        {
          "label": "Center text",
          "value": "center_text"
        },
        {
          "label": "Right text",
          "value": "right_text"
        }
      ]
    },
    {
      "type": "text",
      "id": "padding_top_herotwo",
