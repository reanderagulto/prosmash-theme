{{"mdp-weare-list-produsts-home-9.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" 
     class="mdp mdp-weare-list-produsts-home-9" 
     style="{% unless section.settings.margin_top == blank %}margin-top: {{ section.settings.margin_top }}px;{% endunless %} 
            {% unless section.settings.margin_bottom == blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endunless %}">
  <div class="mdp-container">
    <div class="mdp-grid-collection">
      {% for block in section.blocks %}  
      {% case block.type %}      
        {% when 'list_product' %}
          <div class="mdp-list-collection-item">
              <div class="mdp-data">
                <a href="{{block.settings.product.url}}" class="mdp-btn-link">{{block.settings.product.title}}</a>
              </div>
          </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "List produsts home 9",
    "settings": [
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin bottom (px)"
      }
    ],
	"blocks": [
	  {
        "type": "list_product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
	],
    "presets": [{
      "name": "List produsts home 9",
      "category": "SectionHub: weare"
    }]
  }
{% endschema %}