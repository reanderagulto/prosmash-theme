{{"slideshow-top-home-11.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp mdp-container slideshow-top-home-11"
     data-variant="{{section.settings.variant}}"
     style="{% unless section.settings.margin_top == blank %}
                margin-top: {{ section.settings.margin_top }}px;
            {% endunless %}
            {% unless section.settings.margin_bottom == blank %}
                margin-bottom: {{ section.settings.margin_bottom }}px;{% endunless %}">
    <div class="mdp-swiper-container swiper-slideshow-top-home-11 swiper-slideshow-top-{{ section.id }}">
        <div class="swiper-wrapper mdp-swiper-wrapper">
            {% for block in section.blocks %}
                <div class="swiper-slide mdp-swiper-slide">
                    {% case block.type %}
                        {% when 'slide' %}
                            <div class="mdp-slide {% if block.settings.inverted %}mdp-inverted{% endif %}">
                                <div class="mdp-media lazyload mdp-grid" data-columns="2" data-gap="30"
                                     style="{% unless block.settings.height == blank %}
                                                height: {{ block.settings.height }}px;
                                            {% endunless %}">
                                    <div class="mdp-img-box">
                                        <img src="{{block.settings.image | img_url : '536x813_crop_center' }}" alt="">
                                    </div>
                                    <div class="mdp-img-box">
                                        <img src="{{block.settings.image_two | img_url : '536x813_crop_center' }}" alt="">
                                    </div>
                                </div>
                                <div class="mdp-data">
                                    <div class="mdp-header">
                                        <h4 class="mdp-title">
                                            {{block.settings.title}}
                                        </h4>
                                    </div>
                                    {% unless block.settings.content == blank %}
                                        <div class="mdp-content">
                                            {{block.settings.content}}
                                        </div>
                                    {% endunless %}
                                    <div class="mdp-footer">
                                        {% unless block.settings.link == blank %}
                                            <a class="mdp-button" href="{{block.settings.link}}">{{block.settings.button_string}}</a>
                                        {% endunless %}
                                    </div>
                                </div>
                            </div>
                    {% endcase %}
                </div>
            {% endfor %}
        </div>

        <div class="swiper-button-prev swiper-button-prev-slideshow-top-home-11 swiper-button-prev-slideshow-top-{{ section.id }}"></div>
        <div class="swiper-button-next swiper-button-next-slideshow-top-home-11 swiper-button-next-slideshow-top-{{ section.id }}"></div>

    </div>
</div>

<script>
    const swiperSlideshowHome11_{{ section.id | replace: "-", "_" }} = new Swiper('.swiper-slideshow-top-{{ section.id }}', {
        // Optional parameters
        lidesPerView: 'auto',
        direction: 'horizontal',
        slidesPerView: 1,
        centeredSlides: false,
        speed: 500,
        spaceBetween: 30,
        loop: true,
        autoplay: {
            delay: 5000
        },
        effect: 'slide',
        allowTouchMove: true,
        freeMode: true,
        watchSlidesVisibility: true,
        watchSlidesProgress: true,
        hashNavigation: false,
        pagination: {
            el: '.swiper-pagination-slideshow-top-{{ section.id }}'
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next-slideshow-top-{{ section.id }}',
            prevEl: '.swiper-button-prev-slideshow-top-{{ section.id }}',
        }
    });

    swiperSlideshowHome11_{{ section.id | replace: "-", "_" }}.init();
</script>

{% schema %}
{
  "name": "Slideshow top home 11",
  "settings": [
    {
      "type": "text",
      "id": "height",
      "label": "Height (px)"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin bottom (px)"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_two",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "button_string",
          "label": "Button text",
          "default": "Get more info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "inverted",
          "label": "Inverted",
          "default": false
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow top home 11",
    "category": "SectionHub: We√§re"
  }]
}
{% endschema %}