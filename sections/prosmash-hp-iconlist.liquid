

<section class="prosmash-icon-list">
  <div class="mdp-container">
    <div class="icon-list-container">
      {% for block in section.blocks %}
        <div class="icon-item">
          <div class="img">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 100 }}" alt="{{ block.settings.title }}">
            {% endif %}
          </div>
          <div class="content">
            <div class="title">{{ block.settings.title }}</div>
            <div class="desc">{{ block.settings.description }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Prosmash HP Icon List",
  "settings": [],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon Box",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Icon Box Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Icon Box Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon Box Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Prosmash HP Icon List",
      "category": "Prosmash"
    }
  ]
}
{% endschema %}
