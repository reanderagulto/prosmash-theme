{{ "prosmash-hp-featured.css" | asset_url | stylesheet_tag }}
{{ "prosmash-global.css" | asset_url | stylesheet_tag }}

<section class="featured">
  <div class="mdp-container">
    <h3>FEATURED PRODUCTS</h3>

    <div class="featured-products">
      {% for product in collections['featured'].products %}
          <div class="featured-card">
            <a href="{{ product.url }}">
              <div class="card-img">
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
              </div>
              <div class="card-content">
                <div class="card-title">{{ product.title }}</div>
                <div class="card-price">{{ product.price | money }}</div>
              </div>
            </a>
          </div>
        {% endfor %}
    </div>

    <div class="cta-btn">
      <a href="#">SHOP NOW</a>
    </div>
  </div>
</section>




