<section class="featured">
  <div class="mdp-container">
    <div class="heading-container">
      <h3>{{ section.settings.main_heading }}</h3>
    </div>
    <div class="featured-products">
      {% if section.settings.collection %}
        {% for product in section.settings.collection.products %}
          {% comment %} <div class="featured-card">
            <a href="{{ product.url }}">
              <div class="card-img">
                <div class="canvas" style="
                    background-image: url('{{ product.featured_image | image_url: width: 304 }}');
                    background-color: #F0F0F0;
                    background-size: cover;
                    background-position: center;
                    width: 304px;
                    height: 320px;">
                </div>
                <div class="mdp-add-to-cart mdp-available add-cart-btn"
                  data-product-id="{{ product.variants.first.id }}"
                  data-add-to-cart="Add to cart"
                  data-sold-out="Sold out">
                  Add to cart
                </div>
              </div>
              <div class="card-content">
                {% assign brand = product.metafields.custom.brands.value %}
                  <div class="brand">
                    {% if brand %}
                      {{ brand.name }}
                    {% else %}
                      No brand
                    {% endif %}
                  </div>
                <div class="card-title">{{ product.title }}</div>
                <div class="card-price">{{ product.price | money }}</div>
                <div class="prod-rating">
                    <div class="stars">
                        <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                        <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                        <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                        <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                        <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                    </div>
                    <div>10 reviews <img src="{{ 'ArrowUpRight.svg' | asset_url }}" alt="Star"></div>
                </div>
              </div>
            </a>
          </div> {% endcomment %}
          {% render 'prosmash-product-card-v2', product: product %}
        {% endfor %}
      {% else %}
        <p>No collection selected.</p>
      {% endif %}
    </div>
    <div class="cta-btn">
      <a href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Prosmash HP Featured",
  "settings": [
    {
      "type": "text",
      "label": "Main Heading",
      "id": "main_heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "label": "Button Link",
      "id": "button_link"
    },
    {
      "type": "collection",
      "label": "Featured Collection",
      "id": "collection"
    }
  ],
  "presets": [
    {
      "name": "Prosmash HP Featured",
      "category": "Prosmash"
    }
  ]
}
{% endschema %}
