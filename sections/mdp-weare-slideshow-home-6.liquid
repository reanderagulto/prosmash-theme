{{"mdp-weare-slideshow-home-6.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" 
	 class="mdp {% if section.settings.boxed %}mdp-container{% endif %} mdp-weare-slideshow-home-6"
	 style="{% unless section.settings.margin_top == blank %}
             margin-top: {{ section.settings.margin_top }}px;
            {% endunless %}
            {% unless section.settings.margin_bottom == blank %}
             margin-bottom: {{ section.settings.margin_bottom }}px;
            {% endunless %}">
  <div class="mdp-swiper-container swiper-slideshow-home-6 swiper-slideshow-{{ section.id }}">
    <div class="swiper-wrapper mdp-swiper-wrapper">
      {% for block in section.blocks %}  
      <div class="swiper-slide mdp-swiper-slide">
        {% case block.type %}
        {% when 'slide' %}
        <div class="mdp-slide {% if block.settings.inverted %}mdp-inverted{% endif %}">
          <div class="mdp-media lazyload" data-bgset="{{block.settings.image | img_url : '2500x840' }}"
               style="{% if section.settings.height != blank %}height: {{ block.settings.height }}px;{% endif %}">
          </div>             
            <div class="mdp-data"> 
              <div class="mdp-container" style="justify-content: {{block.settings.text_alignment}};">
                <div class="mdp-box">
                  <div class="mdp-header">
                    <h4 class="mdp-title"
                        {% if block.settings.use_local_styles == true %}style="color: {{block.settings.heading_color}};"{% endif %}>
                      {{block.settings.title}}
                    </h4>
                  </div>
                  {% unless block.settings.content == blank %}
                  <div class="mdp-content">
                    {{block.settings.content}}
                  </div>
                  {% endunless %}
                  <div class="mdp-footer">
                    {% unless block.settings.link == blank %}
                    <a class="mdp-button"
                       style="color: {{ block.settings.button_text_color }}"
                       href="{{block.settings.link}}">{{block.settings.button_string}}</a>
                    {% endunless %}
                  </div>    
                </div>
              </div> 
          	</div>
        </div>    
        {% endcase %}    
      </div>
      {% endfor %}
    </div>

    <div class="swiper-button-prev swiper-button-prev-slideshow-home-6 swiper-button-prev-slideshow-{{ section.id }}"></div>
    <div class="swiper-button-next swiper-button-next-slideshow-home-6 swiper-button-next-slideshow-{{ section.id }}"></div>

    <div class="swiper-pagination swiper-pagination-slideshow-home-6 swiper-pagination-slideshow-{{ section.id }}"></div>

  </div>
</div>

<script>
  const swiperSlideshowHome6_{{ section.id | replace: "-", "_" }} = new Swiper('.swiper-slideshow-{{ section.id }}', {
    // Optional parameters
    lidesPerView: 'auto',
    direction: 'horizontal',
    slidesPerView: 1,
    centeredSlides: false,
    speed: 500,
    spaceBetween: 30,
    loop: true,
    autoplay: {
      delay: 5000
    },
    effect: 'slide',
    allowTouchMove: true,
    freeMode: true,
    watchSlidesVisibility: true,
    watchSlidesProgress: true,
    hashNavigation: false,
    pagination: {
      el: '.swiper-pagination-slideshow-{{ section.id }}'
    },

    // Navigation arrows
    navigation: {
      nextEl: '.swiper-button-next-slideshow-{{ section.id }}',
      prevEl: '.swiper-button-prev-slideshow-{{ section.id }}',
    }
  });

  swiperSlideshowHome6_{{ section.id | replace: "-", "_" }}.init();
</script>

