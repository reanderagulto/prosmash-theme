<section class="prosmash-collection-grid">
  <div class="mdp-container">
    <div class="filter-section">
      <div class="custom-container">
        <div class="col-left">
            <div class="collection-title">{{ collection.title }} ({{ collection.products_count }})</div>
        </div>
        <div class="col-right">
          <div class="filter-container">
                {% render 'faceted-filter' %}
            {% comment %} <div class="filter">
              <div class="label-group"><img src="{{ 'FunnelSimple.svg' | asset_url }}" alt="Fiter Icon"><label for="SortBy" class="visually-hidden">Filter: </label></div>
              {% render 'faceted-filter' %}
            </div> {% endcomment %}


            {% comment %} <div class="sort">
              <div class="label-group"><img src="{{ 'sort.svg' | asset_url }}" alt="Sort Icon"><label for="SortBy" class="visually-hidden">Sort by: </label></div>
              {% if collection.sort_options.size > 1 %}
                  <form method="get" class="collection-sort-form" id="SortByForm">
                      <select name="sort_by" id="SortBy" onchange="this.form.submit()">
                      {% for option in collection.sort_options %}
                          <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>
                          {{ option.name }}
                          </option>
                      {% endfor %}
                      </select>
                  </form>
              {% endif %}
            </div> {% endcomment %}
            
          </div>
        </div>
      </div>
    </div>
    <div class="collection-grid">
      {% for product in collection.products %}
        {% render 'prosmash-product-card', product: product %}
      {% endfor %}
    </div>
  </div>
</section>

