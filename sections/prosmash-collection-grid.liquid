<section class="prosmash-collection-grid">
  <div class="mdp-container">
    <div class="filter-section">
      <div class="custom-container">
        <div class="col-left">
            <div class="collection-title">{{ collection.title }} ({{ collection.products_count }})</div>
        </div>
        <div class="col-right">
          <div class="filter-container">
            <div class="sort">
              <div class="label-group"><img src="{{ 'sort.svg' | asset_url }}" alt="Sort Icon"><label for="SortBy" class="visually-hidden">Sort by: </label></div>
              {% if collection.sort_options.size > 1 %}
                  <form method="get" class="collection-sort-form" id="SortByForm">
                    
                      <select name="sort_by" id="SortBy" onchange="this.form.submit()">
                      {% for option in collection.sort_options %}
                          <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>
                          {{ option.name }}
                          </option>
                      {% endfor %}
                      </select>
                  </form>
              {% endif %}
            </div>
            
          </div>
        </div>
      </div>
    </div>
    <div class="collection-grid">
      {% for product in collection.products %}
        <div class="collection-grid-item">
            <!-- Featured Image -->
            <div class="gallery-container">
                <div class="main-img">
                  <img class="main-product-image"
                      src="{{ product.media[0].preview_image | image_url: width: 400 }}"
                      alt="{{ product.title }}">
                </div>
                <div class="product-thumbnails">
                  {% for media in product.media limit: 4 %}
                    {% if media.media_type == 'image' %}
                      <div class="thumbnail-container">
                        <img
                          src="{{ media.preview_image | image_url: width: 100 }}"
                          alt="{{ product.title }} thumbnail"
                          class="thumbnail-img"
                          data-full="{{ media.preview_image | image_url: width: 400 }}">
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
            </div>


          <div class="product-details">
            <div class="prod-title">{{ product.title |  truncate: 25 }}</div>
            <div class="prod-price">{{ product.price | money }}</div>
            <div class="tag">Limited Edition</div>
            <div class="infos">
              <div class="variant">1 color</div>
              <div class="stocks">
                {% assign inventory = product.variants.first.inventory_quantity %}
                  {% if inventory > 0 %}
                    <p>{{ inventory }} in stocks</p>
                  {% else %}
                    <p class="out-of-stock">Out of stock</p>
                {% endif %}
              </div>
            </div>


            <!-- Buttons -->
            <div class="product-buttons">
              
              <!-- Add to Cart -->
              {% if inventory > 0 %}
                <div class="mdp-add-to-cart mdp-available add-cart-btn"
            data-product-id="{{ product.variants.first.id }}"
            data-add-to-cart="Add to cart"
            data-sold-out="Sold out">
              Add to cart
            </div>
              {% else %}
                <button class="btn add-cart-btn" disabled>Out of Stock</button>
              {% endif %}

              <!-- View Product -->
              <a href="{{ product.url }}" class="btn view-btn">View Product</a>

            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

