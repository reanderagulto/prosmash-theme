{{"mdp-weare-icon-list-faq-1.css" | asset_url | stylesheet_tag }}

      <div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-icon-list-faq-1"
           style="{% if section.settings.margin_top != blank %}
                   margin-top: {{ section.settings.margin_top }}px;
                  {% endif %}
                   {% if section.settings.margin_bottom != blank %}
                   margin-bottom: {{ section.settings.margin_bottom }}px;
                  {% endif %}">
        <div>
        <div class="mdp-grid">
          {% for block in section.blocks %}
          {% case block.type %}
          {% when 'list_item' %}
            <div class="mdp-icon-list-item">

              <div class="mdp-media">
                <span class="mdp-icon"> <i class="{{block.settings.icon_class}}"></i></span>
              </div>

              <div class="mdp-data">
                {% unless block.settings.title == blank %}
                <div class="mdp-header">
                  <div class="mdp-title">
                    {{block.settings.title}}
                  </div>
                </div>
                {% endunless %}
                {% unless block.settings.content == blank %}
                <div class="mdp-content">
                  {{block.settings.content}}
                </div>
                {% endunless %}
                <div class="mdp-footer">
                  {% unless block.settings.link == blank %}
                  <a class="mdp-button" href="{{block.settings.link}}">
                    <span class="mdp-text">{{block.settings.button_string}}</span>
                    <span class="mdp-icon">{% render 'mdp-weare-icon' with '003' %}</span>
                  </a>
                  {% endunless %}
                </div>
              </div>
            </div>

            {% when 'list_header' %}
              <div class="mdp-icon-list-item">
                <div class="mdp-data">
                  <div class="mdp-header">
                    <h3 class="mdp-title">
                      {{block.settings.heading}}
                    </h3>
                  </div>
                </div>
              </div>
            {% when 'list_collection' %}
              <div class="mdp-icon-list-item">
                  <div class="mdp-data">
                    <a href="{{block.settings.collection.url}}" class="mdp-btn-link">{{block.settings.collection.title}}</a>
                  </div>
              </div>
            {% endcase %}
          {% endfor %}
        </div>
        </div>
      </div>


