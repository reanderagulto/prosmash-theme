{{"mdp-weare-hero-faq-1.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" 
     class="mdp mdp-weare-hero-faq-1 lazyload
    {% if section.settings.boxed %}mdp-container{% endif %}
    {% if section.settings.inverted_herotwo %}mdp-inverted{% endif %}
    {% if section.settings.backed_herotwo %}mdp-backed{% endif %}"
     data-variant="{{section.settings.variant_herotwo}}">
  <div class="mdp-grid"
       data-columns="1"
       data-gap="30"
       style="padding-top: 0;
               padding-bottom: 0;
               margin-top: {{ section.settings.margin_top_herotwo }}px;
               margin-bottom: {{ section.settings.margin_bottom_herotwo }}px;">
    <div class="mdp-data mdp-data-hero-faq-1"
         style="background-color: {{section.settings.background_image_herotwo}};
                 padding-top: {{ section.settings.padding_top_herotwo }}px;
                 padding-bottom: {{ section.settings.padding_bottom_herotwo }}px;
                 background-repeat: no-repeat;
                 background-size: {{ section.settings.background_size_herotwo }};
                 background-image: url({{section.settings.image_herotwo | img_url : section.settings.image_size_herotwo}});">

      <div class="mdp-header"
           style="margin-left: {{section.settings.head_margin_left_hero}}px;">
        {% if section.settings.subtitle_herotwo != blank %}
          <div class="mdp-subtitle"
               {% if section.settings.use_local_styles_faq == true %}
               style="color: {{section.settings.heading_color_herotwo_faq}};"{% endif %}>
              {{section.settings.subtitle_herotwo}}
          </div>
        {% endif %}
        <h1 class="mdp-title-hero-faq-1" 
            style="{% if section.settings.use_local_styles_faq == true %}
                    color: {{section.settings.heading_color_herotwo_faq}};
                  {% endif %}">{{section.settings.title_herotwo}}</h1>
      </div>

      {% unless section.settings.content_herotwo == blank %}
          {{section.settings.content_herotwo}}
      {% endunless %}
        <div class="mdp-footer">
          {% unless section.settings.link_herotwo == blank %}
              <a class="mdp-button" href="{{section.settings.link_herotwo}}">{{section.settings.button_string_herotwo}}</a>
          {% endunless %}
        </div>  
      	{% if section.settings.subscribe_herotwo == true %}
          <div class="mdp-signup-form">
              {% form "customer" %}
                {{ form.errors | default_errors }}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="mdp-row">
                  <input  type="email" placeholder="Subscribe by email" name="contact[email]"/>
                  <button type="submit" class="mdp-submit">Submit</button>    
                </div>
              {% endform %}    
          </div>
      	{% endif %}
    </div>  
  </div>
</div>

{% schema %}
  {
    "name": "Hero Faq 1",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title_herotwo",
        "label": "Heading",
        "default": "Product promo"
      },
	  {
        "type": "text",
        "id": "subtitle_herotwo",
        "label": "Subheading"
      },
      {
        "type": "checkbox",
        "id": "use_local_styles_faq",
        "label": "Use local styles",
        "default": true
      },
	  {
        "type": "text",
        "id": "head_margin_left_hero",
        "label": "Heading margin left",
        "default": "50"
      },
	  {
        "type": "color",
        "id": "heading_color_herotwo_faq",
        "label": "Heading color",
        "default": "#343434"
      },
      {
        "type": "image_picker",
        "id": "image_herotwo",
        "label": "Image"
      },
	  {
        "type": "select",
        "id": "background_size_herotwo",
        "label": "Background size",
        "default": "auto",
        "options": [
          {
            "label": "Auto",
            "value": "auto"
          },
          {
            "label": "Cover",
            "value": "cover"
          },
          {
            "label": "Contain",
            "value": "contain"
          }
        ]
      },
      {
        "type": "color",
        "id": "background_image_herotwo",
        "label": "Background image",
        "default": "#F9F9F9"
      },
      {
        "type": "richtext",
        "id": "content_herotwo",
        "label": "Content"
      },
      {
         "type": "text",
         "id": "image_size_herotwo",
         "label": "Image size",
         "default": "2000x500_crop_center",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "type": "text",
        "id": "button_string_herotwo",
        "label": "Button text",
        "default": "Start shopping"
      },
      {
        "type": "url",
        "id": "link_herotwo",
        "label": "Button link"
      },
	  {
        "type": "checkbox",
        "id": "boxed",
        "label": "Boxed",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "inverted_herotwo",
        "label": "Inverted",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "backed_herotwo",
        "label": "Backed",
        "default": false
      },
	  {
        "type": "checkbox",
        "id": "subscribe_herotwo",
        "label": "Show subscribe",
        "default": false
      },
	  {
        "type": "select",
        "id": "variant_herotwo",
        "label": "Variant",
        "default": "left_text",
        "options": [
          {
            "label": "Left text",
            "value": "left_text"
          },
          {
            "label": "Center text",
            "value": "center_text"
          },
          {
            "label": "Right text",
            "value": "right_text"
          }
        ]
      },
      {
        "type": "text",
        "id": "padding_top_herotwo",
        "label": "Padding top (px)"
      },
      {
        "type": "text",
        "id": "padding_bottom_herotwo",
        "label": "Padding bottom (px)"
      },
      {
        "type": "text",
        "id": "margin_top_herotwo",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom_herotwo",
        "label": "Margin bottom (px)"
      }
    ],	
    "presets": [{
      "name": "Hero Faq 1",
      "category": "SectionHub: weare"
    }]
  }
{% endschema %}