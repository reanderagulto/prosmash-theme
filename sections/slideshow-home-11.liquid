        },
        {
          "type": "image_picker",
          "id": "mini_img_product_1",
          "label": "Mini img 1"
        },
        {
          "type": "image_picker",
          "id": "mini_img_product_2",
          "label": "Mini img 2"
        },
        {
          "type": "image_picker",
          "id": "mini_img_product_3",
