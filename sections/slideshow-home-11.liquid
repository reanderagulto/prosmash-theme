{{"slideshow-home-11.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp {% if section.settings.boxed == true %}mdp-container{% endif %} mdp-weare-slideshow-home-11"
     data-variant="style_1"
     style="{% unless section.settings.margin_top == blank %}
             margin-top: {{ section.settings.margin_top }}px;
     {% endunless %}
     {% unless section.settings.margin_bottom == blank %}
             margin-bottom: {{ section.settings.margin_bottom }}px;
     {% endunless %}">
    <div class="swiper-slideshow-home-11 mdp-swiper-container swiper-container swiper-slideshow-{{ section.id }}"
         data-slidesPerView="1"
         data-navigation="true">
        <div class="swiper-wrapper mdp-swiper-wrapper">
            {% for block in section.blocks %}
                <div class="swiper-slide mdp-swiper-slide">
                    {% case block.type %}
                        {% when 'slide' %}
                            <div class="mdp-slide {% if block.settings.inverted %}mdp-inverted{% endif %} mdp-grid"
                                 data-columns="2"
                                 data-gap="30">
                                <div class="mdp-media lazyload">
                                    <img src="{{block.settings.image | img_url : '570x657_crop_center' }}" alt="">
                                </div>
                                <div class="mdp-data">
                                    <div class="mdp-content-box">
                                        <div class="mdp-header">
                                            <p class="mdp-subtitle">{{block.settings.subtitle}}</p>
                                            <h4 class="mdp-title">
                                                {{block.settings.title}}
                                            </h4>
                                        </div>
                                        {% unless block.settings.content == blank %}
                                            <div class="mdp-content">
                                                {{block.settings.content}}
                                            </div>
                                        {% endunless %}
                                        <div class="mdp-footer">
                                            {% render 'mdp-weare-social-sharing' %}
                                            <div class="mdp-img-box mdp-grid" data-columns="3" data-gap="5">
                                                <div class="mdp-box-img">
                                                    <img src="{{block.settings.mini_img_product_1 | img_url : '155x245_crop_center'}}" alt="">
                                                </div>
                                                <div class="mdp-box-img">
                                                    <img src="{{block.settings.mini_img_product_2 | img_url : '155x245_crop_center'}}" alt="">
                                                </div>
                                                <div class="mdp-box-img">
                                                    <img src="{{block.settings.mini_img_product_3 | img_url : '155x245_crop_center'}}" alt="">
                                                </div>
                                            </div>
                                            {% unless block.settings.link == blank %}
                                                <a class="mdp-button" href="{{block.settings.link}}">{{block.settings.button_string}}</a>
                                            {% endunless %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                    {% endcase %}
                </div>
            {% endfor %}
        </div>

        <div class="swiper-button-prev swiper-button-prev-slideshow-home-11 swiper-button-prev-{{ section.id }}"></div>
        <div class="swiper-button-next swiper-button-next-slideshow-home-11 swiper-button-next-{{ section.id }}"></div>

    </div>
</div>

<script>
    const swiperSlideshowHomeNew11_{{ section.id | replace: "-", "_" }} = new Swiper('.swiper-slideshow-{{ section.id }}', {
        // Optional parameters
        lidesPerView: 'auto',
        direction: 'horizontal',
        slidesPerView: 1,
        centeredSlides: false,
        speed: 500,
        spaceBetween: 30,
        loop: true,
        effect: 'slide',
        allowTouchMove: true,
        freeMode: true,
        watchSlidesVisibility: true,
        watchSlidesProgress: true,
        hashNavigation: true,
        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next-{{ section.id }}',
            prevEl: '.swiper-button-prev-{{ section.id }}',
        }
    });

    swiperSlideshowHomeNew11_{{ section.id | replace: "-", "_" }}.init();
</script>

