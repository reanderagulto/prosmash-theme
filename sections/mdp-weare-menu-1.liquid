                                                                            <a href="{{ grandchildlink.url }}"
                                                                               class="mdp-menu-link">{{ grandchildlink.title | escape }}</a>
                                                                        </div>
                                                                    {% endfor %}
                                                                </div>
                                                            </div>
                                                        {% else %}
                                                            <div class="mdp-menu-item {% if childlink.active %}mdp-active{% endif %} {% if childlink.child_active %}mdp-active-ancestor{% endif %} {% if childlink.current %}mdp-current{% endif %} {% if childlink.child_current %}mdp-current-ancestor{% endif %}">
                                                                <a href="{{ childlink.url }}"
                                                                   class="mdp-menu-link">{{ childlink.title | escape }}</a>
                                                            </div>
                                                        {% endif %}
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="mdp-menu-item {% if link.active %}mdp-active{% endif %} {% if link.child_active %}mdp-active-ancestor{% endif %} {% if link.current %}mdp-current{% endif %} {% if link.child_current %}mdp-current-ancestor{% endif %}">
                                                <a href="{{ link.url }}"
                                                   class="mdp-menu-link">{{ link.title | escape }}</a>
                                            </div>
                                        {% endif %}
                                    {% endfor %}

                                    <div class="mdp-mobile-devices-footer">

                                        <div class="mdp-language-region">
                                            <h3>Language & Region:</h3>
                                            {% form 'localization' %}
                                                <select name="country_code">
                                                    {% for country in localization.available_countries %}
                                                        <option value="{{ country.iso_code }}" {% if country == localization.country %} selected="selected"{% endif %}>
                                                            {{ country.name }} ({{ country.iso_code }})
                                                            - {{ country.currency.symbol }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            {% endform %}

                                            {% form 'localization' %}
                                                <select name="language_code">
                                                    {% for language in localization.available_languages %}
                                                        <option value="{{ language.iso_code }}" {% if language == localization.language %} selected="selected"{% endif %}>
                                                            {{ language.endonym_name }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            {% endform %}
                                        </div>

                                        <div class="mdp-follow-us">
                                            <h3>Follow Us:</h3>
                                            <span class="mdp-info-list">
                                                {% for block in section.blocks %}
                                                    {% if block.type == "mobile_icons" %}
                                                        <span class="mdp-info">
                                                        <a href="{{ block.settings.social_link }}"
                                                           class="mdp-social-link"><i
                                                                    class="{{ block.settings.icon_class }}"></i></a>
                                                        </span>
                                                    {% endif %}
                                                {% endfor %}
                                            </span>
                                        </div>

                                        <div class="mdp-my-account">
                                            <h3>My Account:</h3>
                                            <a href="/account/register" class="mdp-sign-up-devices">Sign Up</a>
                                            <a href="/account" class="mdp-login-devices">Login</a>
                                        </div>

                                        <div class="mdp-work-time-box">
                                            {% for block in section.blocks %}
                                                {% if block.type == "work_time" %}
                                                    <span class="mdp-info-list">
                                                        <span class="mdp-info mdp-work-time">
                                                            <span><i class="fas fa-clock"></i> Opening time:&nbsp;</span>
                                                            <span>{{ block.settings.work_time_text }}</span>
                                                        </span>
                                                    </span>
                                                {% endif %}
                                            {% endfor %}
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endif %}


                   

                </div>
            </div>
