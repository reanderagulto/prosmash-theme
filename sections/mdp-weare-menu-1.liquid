                                                    {% for childlink in link.links %}
                                                        {% if childlink.links != blank %}
                                                            <div class="mdp-menu-item mdp-has-children {% if childlink.active %}mdp-active{% endif %} {% if childlink.child_active %}mdp-active-ancestor{% endif %} {% if childlink.current %}mdp-current{% endif %} {% if childlink.child_current %}mdp-current-ancestor{% endif %}">
                                                                <a href="{{ childlink.url }}" class="mdp-menu-link">
                                                                    {{ childlink.title | escape }}
                                                                    <span class="mdp-right-icon">{% render 'mdp-weare-icon' with '007' %}</span>
                                                                </a>
                                                                <input id="{{ childlink.url | md5 | slice: 0, 5 | prepend: 'id' }}"
                                                                       type="checkbox">
