      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class"
        },
        {
          "type": "url",
          "id": "social_link",
          "label": "Social link"
        }
      ]
    },
    {
      "type": "work_time",
      "name": "Work time - Mobile",
      "settings": [
        {
          "type": "text",
