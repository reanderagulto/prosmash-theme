{% schema %}
{
  "name": "TopMenu",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_logo_img",
      "label": "Use logo image",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_size",
      "label": "Logo size",
      "default": "50x50"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "checkbox",
      "id": "search",
      "label": "Search",
      "default": true
    },
    {
        "type": "image_picker",
        "id": "static_image",
        "label": "Dropdown Image"
    }
  ],
  "blocks": [
    {
      "type": "mobile_icons",
      "name": "Social Icon - Mobile",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class"
        },
        {
          "type": "url",
          "id": "social_link",
          "label": "Social link"
        }
      ]
    },
    {
      "type": "work_time",
      "name": "Work time - Mobile",
      "settings": [
        {
          "type": "text",
          "id": "work_time_text",
          "label": "Work time"
        }
      ]
    }
  ]
}
{% endschema %}