<script>
    let searchLink = document.querySelector('.mdp-search-link');
    let searchBar = document.querySelector('.mdp-search-display');

    searchLink.addEventListener("click", event => {

        if (searchBar.classList[1] == 'mdp-search-display-none') {
            searchBar.classList.remove("mdp-search-display-none");
            searchBar.classList.add("mdp-search-display-block");
        } else {
            searchBar.classList.remove("mdp-search-display-block");
            searchBar.classList.add("mdp-search-display-none");
        }

    });
</script>

