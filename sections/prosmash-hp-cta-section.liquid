{{ "prosmash-global.css" | asset_url | stylesheet_tag }}

{% assign cta_bg = section.settings.cta_bg | default: 'assets/default-cta-img.jpg' %}

<section class="cta-section">
  <div class="cta-section__inner-wrapper">
    <div class="cta-section__image-container">
      <img 
        src="{% if section.settings.cta_bg %}{{ section.settings.cta_bg | image_url }}{% else %}{{ 'cta-bg.jpg' | asset_url }}{% endif %}" 
        alt="CTA Background"
        width="728"
        height="440"
      >
    </div>
    <div class="cta-section__text-content">
      <div class="mdp-container">
        <div class="cta-section__text-wrapper">
          <div class="cta-title">{{ section.settings.cta_title }}</div>
          <div class="cta-desc">{{ section.settings.cta_description }}</div>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Prosmash HP CTA Section",
  "settings": [
   {
    "type": "textarea",
    "id": "cta_title",
    "label": "Title",
    "default": "MAXIMIZES STABILITY"
    },
   {
    "type": "textarea",
    "id": "cta_description",
    "label": "Description",
    "default": "Take <span>20% Off</span> / Sale Must-Haves"
    },
    {
      "type": "image_picker",
      "id": "cta_bg",
      "label": "Background"
    },
  ],
  "presets": [{
    "name": "Prosmash HP CTA Section",
    "category": "Prosmash"
  }]
}
{% endschema %}