{{ "sectionhub-weare.css" | asset_url | stylesheet_tag }}

<div class="mdp-grid" data-columns="1" data-gap="30">
    <div class="mdp-col">
        <div class="mdp-accordion">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'text_item' %}
                        <div class="mdp-text-item {% if forloop.index == 1 %}mdp-active{% endif %}">
                            <div class="mdp-header">
                                <div class="mdp-title">
                                    {{ block.settings.title }}
                                </div>
                                <span class="mdp-icon mdp-closed"><i class="far fa-angle-down"></i></span>
                                <span class="mdp-icon mdp-opened"><i class="far fa-angle-up"></i></span>
                            </div>
                            <div class="mdp-data">
                                <div class="mdp-content">
                                    {{ block.settings.content }}
                                </div>
                                <div class="mdp-footer">
                                    {% unless block.settings.link == blank %}
                                        <a class="mdp-button" href="{{ block.settings.link }}">
                                            <span class="mdp-text">{{ block.settings.button_string }}</span>
                                            <span class="mdp-icon">{% render 'mdp-weare-icon' with '003' %}</span>
                                        </a>
                                    {% endunless %}
                                </div>
                            </div>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Accordion 1",
  "settings": [
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin bottom (px)"
    }
  ],
  "blocks": [
    {
      "type": "text_item",
      "name": "Text item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "button_string",
          "label": "Button text",
          "default": "Get more info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    }
  ]
}
{% endschema %}