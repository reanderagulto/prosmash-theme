{{"promo-banners.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp mdp-weare-promo-banners"
     data-variant="{{section.settings.variant_promotwo}}"
     style="background-color: {{ section.settings.bg_color_promotwo }};
             padding-top: {{ section.settings.padding_top_promotwo }}px;
             padding-bottom: {{ section.settings.padding_bottom_promotwo }}px;
             margin-top: {{ section.settings.margin_top_promotwo }}px;
             margin-bottom: {{ section.settings.margin_bottom_promotwo }}px;">
    <div class="{% if section.settings.boxed == true %}mdp-container{% else %}mdp-boxed{% endif %}">
        <div class="mdp-data">
            <div class="mdp-footer">
                <div class="mdp-grid" data-columns="2" data-gap="30">

                  <div class="mdp-weare-product-card">
                    <img src="{{section.settings.banner_image | img_url : section.settings.image_size_promo}}" style="width: 100%;" alt="">
                    <div class="mdp-info-left">
                      <h3 class="mdp-name-product">{{section.settings.title_promo}}</h3>
                      <p class="mdp-subtitle">{{section.settings.subtitle_promo}}</p>
                      <p class="mdp-price-product">{{cart.currency.symbol}}{{section.settings.price_product}}</p>
                    </div>
                    <a href="{{ section.settings.card_link }}" class="mdp-link-card"></a>
                  </div>

                  <div class="mdp-weare-product-card">
                    <img src="{{section.settings.banner_image_1 | img_url : section.settings.image_size_promotwo}}" style="width: 100%;" alt="">
                    <div class="mdp-info-right">
                      <h3 class="mdp-name-product">{{section.settings.title_promotwo}}</h3>
                      <div class="mdp-characteristics">{{section.settings.info_content}}</div>
                    </div>
                    <a href="{{ section.settings.card_link_two }}" class="mdp-link-card"></a>
                  </div>
                </div>

            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Promo banners",
  "settings": [
    {
      "type": "header",
      "content": "Banner 1"
    },
    {
      "type": "text",
      "id": "title_promo",
      "label": "Product name"
    },
    {
      "type": "text",
      "id": "subtitle_promo",
      "label": "Info content"
    },
    {
      "type": "text",
      "id": "price_product",
      "label": "Price product"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "image_size_promo",
      "label": "Image size",
      "default": "865x290_crop_center",
      "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
    },
    {
      "type": "url",
      "id": "card_link",
      "label": "Card link"
    },
    {
      "type": "header",
      "content": "Banner 2"
    },
    {
      "type": "text",
      "id": "title_promotwo",
      "label": "Product name"
    },
    {
      "type": "html",
      "id": "info_content",
      "label": "Info content"
    },
    {
      "type": "image_picker",
      "id": "banner_image_1",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "image_size_promotwo",
      "label": "Image size",
      "default": "865x290_crop_center",
      "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
    },
    {
      "type": "url",
      "id": "card_link_two",
      "label": "Card link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "checkbox",
      "id": "boxed",
      "label": "Boxed",
      "default": true
    },
    {
      "type": "text",
      "id": "padding_top_promotwo",
      "label": "Padding top (px)"
    },
    {
      "type": "text",
      "id": "padding_bottom_promotwo",
      "label": "Padding bottom (px)"
    },
    {
      "type": "text",
      "id": "margin_top_promotwo",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom_promotwo",
      "label": "Margin bottom (px)"
    }
  ],
  "presets": [{
    "name": "Promo banners",
    "category": "SectionHub: weare"
  }]
}
{% endschema %}