<section class="hot-products">
    <div class="mdp-container">
        <div class="heading-container">
            Check our hot products
        </div>
        <div class="prod-container">
            {% for block in section.blocks %}
                {% assign product = block.settings.product %}
                {% if product %}
                    {% render 'prosmash-product-card', product: product %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .hot-products .heading-container {
        color: #000;
        font-family: var(--font-lexend);
        font-size: 24px;
        font-style: normal;
        font-weight: 500;
        line-height: 130%; /* 31.2px */
    }

    .prod-container {
        display: flex;
        align-items: flex-start;
        gap: 40px;
        align-self: stretch;
        flex-wrap: wrap;
        justify-content: center;
    }

    .hot-products .mdp-container {
        display: flex;
        padding: 0px 64px 100px 64px;
        flex-direction: column;
        align-items: start;
        gap: 40px;
        align-self: stretch;
    }
</style>

{% schema %}
  {
    "name": "Hot Products",
    "settings": [
        
    ],
    "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
    ],
    "max_blocks": 4,
    "presets": [{
      "name": "Hot Products",
      "category": "Prosmash: Contact Us"
    }]
  }
{% endschema %}