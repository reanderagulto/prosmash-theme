<section class="hot-products">
    <div class="mdp-container">
        <div class="heading-container">
            Check our hot products
        </div>
        <div class="prod-container">
            {% for block in section.blocks %}
                {% assign product = block.settings.product %}
                {% if product %}
                    <div class="product-card-v2">
                    <a href="{{ product.url }}">
                    <div class="prod-img">
                        <div class="img-container">
                        <div class="canvas" style="
                            background-image: url('{{ product.featured_image | image_url: width: 246 }}');
                            background-color: #F0F0F0;
                            background-size: cover;
                            background-position: center;
                            width: 304px;
                            height: 320px;">
                        </div>
                        </div>
                        <div class="mdp-add-to-cart mdp-available add-cart-btn"
                        data-product-id="{{ product.variants.first.id }}"
                        data-add-to-cart="Add to cart"
                        data-sold-out="Sold out">
                        Add to cart
                        </div>
                    </div>
                    <div class="prod-details">
                        {% assign brand = product.metafields.custom.brands.value %}
                        <div class="brand">
                        {% if brand %}
                            {{ brand.name }}
                        {% else %}
                            No brand
                        {% endif %}
                        </div>
                        <div class="prod-title">{{ product.title | truncate: 25 }}</div>
                        <div class="prod-price">{{ product.price | money }}</div>
                        <div class="prod-rating">
                            <div class="stars">
                                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                            </div>
                            <div>10 reviews <img src="{{ 'ArrowUpRight.svg' | asset_url }}" alt="Star"></div>
                        </div>
                    </div>
                    </a>
                </div>

                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

<style>
    .hot-products {
        padding: 0px 64px 100px 64px;
    }    
    .hot-products .heading-container {
        color: #000;
        font-family: var(--font-redhat);
        font-size: 24px;
        font-style: normal;
        font-weight: 500;
        line-height: 130%; /* 31.2px */
    }

    .prod-container {
        display: flex;
        align-items: flex-start;
        gap: 32px;
        align-self: stretch;
        flex-wrap: wrap;
        justify-content: center;
    }

    .hot-products .mdp-container {
        display: flex;
        /* padding: 0px 64px 100px 64px; */
        flex-direction: column;
        align-items: start;
        gap: 40px;
        align-self: stretch;
    }
    .hot-products .custom-container {
        max-width: 1312px;
    }
</style>

{% schema %}
  {
    "name": "Hot Products",
    "settings": [
        
    ],
    "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
    ],
    "max_blocks": 4,
    "presets": [{
      "name": "Hot Products",
      "category": "Prosmash: Contact Us"
    }]
  }
{% endschema %}