{{"mdp-weare-promo-3.css" | asset_url | stylesheet_tag }}

<div style="display: none;">
  <svg id="mdp-icon-094" aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 24 24"><path fill="currentColor" d="M6.167 20.584c-.065 0-.117-.003-.156-.01s-.091-.022-.156-.049c-.091-.065-.166-.144-.225-.234s-.088-.202-.088-.332V3.709c0-.13.029-.241.088-.332s.133-.169.225-.234c.13-.065.254-.085.371-.059s.221.065.313.117l11.25 8.125c.065.065.124.144.176.234.052.091.078.183.078.273s-.02.183-.059.273-.104.169-.195.234l-11.25 8.125c-.065.026-.127.052-.186.078s-.121.041-.186.041zm.625-1.875l9.57-6.875-9.57-6.875v13.75z"></path></svg>
</div>

<div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-promo-3" data-variant="{{section.settings.variant}}" style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">
  <div class="mdp-container">
    <div class="mdp-grid" data-columns="2" data-gap="30">
      {% if section.settings.image != blank %}
      <div class="mdp-media">
        <div class="mdp-placeholder" style="padding-top: calc({{ section.settings.image_size | split: "_" | first | split: "x" | last }} / {{ section.settings.image_size | split: "x" | first }} * 100%);">
          <img class="mdp-image lazyload" data-src="{{section.settings.image | img_url : section.settings.image_size}}" alt="{{section.settings.title}}" >
        </div>
        {% unless section.settings.video_url == blank %}
          <a class="mdp-magnific-popup" href="{{section.settings.video_url}}">
            <span class="mdp-icon"><svg><use xlink:href="#mdp-icon-094"></use></svg></span>
          </a>
        {% endunless %}
      </div>
      {% endif %}

      <div class="mdp-data">
        <div class="mdp-header">
          <h2 class="mdp-title">
            {{section.settings.title}}
          </h2>
          {% unless section.settings.subtitle == blank %}
            <div class="mdp-subtitle">
              {{section.settings.subtitle}}
            </div>
          {% endunless %}
        </div>
        <div class="mdp-content-footer">
          {% unless section.settings.content == blank %}
            <div class="mdp-content">
              {{section.settings.content}}
            </div>
          {% endunless %}
          <div class="mdp-footer">
            {% unless section.settings.link == blank %}
              <a class="mdp-button" href="{{section.settings.link}}">{{section.settings.button_string}}</a>
            {% endunless %}
          </div>
        </div>
      </div>

    </div>
  </div>

</div>

{% schema %}
  {
    "name": "Promo 3",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Product promo"
      },
	  {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "button_string",
        "label": "Button text",
        "default": "Get more info"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
         "type": "text",
         "id": "image_size",
         "label": "Image size",
         "default": "600x600_crop_center",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "id": "video_url",
        "type": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
      },
	  {
        "type": "select",
        "id": "variant",
        "label": "Variant",
        "default": "left_text",
        "options": [
          {
            "label": "Left text",
            "value": "left_text"
          },
          {
            "label": "Right text",
            "value": "right_text"
          },
          {
            "label": "Left text inverted",
            "value": "left_text_inverted"
          },
          {
            "label": "Right text inverted",
            "value": "right_text_inverted"
          }
        ]
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin bottom (px)"
      }
    ],	
    "presets": [{
      "name": "Promo Full Width",
      "category": "SectionHub: weare"
    }]
  }
{% endschema %}