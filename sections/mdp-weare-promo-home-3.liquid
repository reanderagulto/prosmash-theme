      "options": [
        {
          "label": "Left text",
          "value": "left_text"
        },
        {
          "label": "Right text",
          "value": "right_text"
        },
        {
          "label": "Left text inverted",
          "value": "left_text_inverted"
        },
        {
          "label": "Right text inverted",
          "value": "right_text_inverted"
        }
      ]
    },
    {
      "type": "text",
      "id": "padding_top_promotwo",
      "label": "Padding top (px)"
    },
    {
      "type": "text",
      "id": "padding_bottom_promotwo",
      "label": "Padding bottom (px)"
    },
    {
      "type": "text",
      "id": "margin_top_promotwo",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom_promotwo",
      "label": "Margin bottom (px)"
    }
  ],
  "blocks": [
    {
      "type": "list",
      "name": "List",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class"
        },
        {
          "type": "text",
          "id": "text_promotwo",
          "label": "Item text",
          "default": "item text"
        }
      ]
    },
    {
      "type": "list_link",
      "name": "List link",
      "settings": [
        {
          "type": "text",
          "id": "icon_class_link",
          "label": "Icon Class"
        },
        {
          "type": "text",
          "id": "text_promotwo_link",
          "label": "Item text",
          "default": "item text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link"
        }
      ]
    },
    {
      "type": "product_link",
      "name": "Product link",
      "settings": [
        {
          "type": "text",
          "id": "name_product",
          "label": "Name product"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Align name product",
          "default": "center",
          "options": [
            {
              "label": "Center",
              "value": "center"
            },
            {
              "label": "Right",
              "value": "right"
            },
            {
              "label": "Left",
              "value": "left"
            }
          ]
        },
        {
          "type": "text",
          "id": "font_size",
          "label": "Product font size(px)",
          "default": "16"
        },
        {
          "type": "text",
          "id": "type_product",
          "label": "Type product"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product price"
        },
        {
          "type": "image_picker",
          "id": "image_product",
          "label": "Image product"
        },
        {
          "type": "text",
          "id": "image_size_produst",
          "label": "Image size produst",
          "default": "600x600_crop_center",
          "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
        },
        {
          "type": "url",
          "id": "link_product",
          "label": "Link product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promo Boxed",
      "category": "SectionHub: weare"
    }
  ]
}
{% endschema %}