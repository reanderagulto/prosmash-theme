{{ "mdp-weare-promo-home-3.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp mdp-weare-promo-home-3"
     data-variant="{{ section.settings.variant_promotwo }}"
     style="background-color: {{ section.settings.bg_color_promotwo }};
             padding-top: {{ section.settings.padding_top_promotwo }}px;
             padding-bottom: {{ section.settings.padding_bottom_promotwo }}px;
             margin-top: {{ section.settings.margin_top_promotwo }}px;
             margin-bottom: {{ section.settings.margin_bottom_promotwo }}px;">
    <div class="mdp-container">
        <div class="mdp-grid" data-columns="2" data-gap="30">

            <div class="mdp-data">

                {% if section.settings.title_promotwo != blank or section.settings.subtitle_promotwo != blank %}
                    <div class="mdp-header">
                        {% if section.settings.title_promotwo != blank %}
                          <h2 class="mdp-title">
                              {{ section.settings.title_promotwo }}
                          </h2>
                        {% endif %}

                        {% if section.settings.subtitle_promotwo == blank %}
                            <div class="mdp-subtitle">
                                {{ section.settings.subtitle_promotwo }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

                <div class="mdp-footer">
                    {% if section.blocks.size != 0 %}
                        {% for block in section.blocks %}

                            <div class="mdp-items mdp-two-columns">
                                <div class="mdp-item">
                                    {% if block.type == 'list' %}
                                        {% if block.settings.icon_class != '' %}
                                            <span class="mdp-fa-icon"><i
                                                        class="{{ block.settings.icon_class }}"></i></span>
                                        {% endif %}
                                        <span class="mdp-text">{{ block.settings.text_promotwo }}</span>
                                    {% endif %}

                                    {% if block.type == 'list_link' %}
                                        {% if block.settings.icon_class_link != '' %}
                                            <span class="mdp-fa-icon"><i
                                                        class="{{ block.settings.icon_class_link }}"></i></span>
                                        {% endif %}
                                        <span class="mdp-text">
                                    <a href="{{ block.settings.link_url }}">{{ block.settings.text_promotwo_link }}</a>
                                    </span>
                                    {% endif %}
                                </div>
                            </div>

                            {% if block.type == 'product_link' %}
                                <div class="mdp-product-box">
                                    <img src="{{ block.settings.image_product | img_url: block.settings.image_size_produst }}"
                                         alt="">

                                    {% if block.settings.type_product != blank %}
                                        <p class="mdp-type-product"
                                           style="text-align: {{ block.settings.text_align }}">
                                          {{ block.settings.type_product }}</p>
                                    {% endif %}

                                    {% if block.settings.product_price != blank %}
                                        <p class="mdp-price-product"
                                           style="text-align: {{ block.settings.text_align }}">
                                          {{ cart.currency.symbol }}{{ block.settings.product_price }}</p>
                                    {% endif %}
                                </div>
                            {% endif %}

                        {% endfor %}
                    {% endif %}
                </div>

                {% if section.settings.content_promotwo != blank %}
                    <div class="mdp-content">
                        {% for block in section.blocks %}
                            {% if block.type == 'product_link' %}
                                <a class="mdp-name-product"
                                   style="text-align: {{ block.settings.text_align }};
                                           font-size: {{ block.settings.font_size }}px;"
                                   href="{{ block.settings.link_product }}">{{ block.settings.name_product }}</a>
                            {% endif %}
                        {% endfor %}

                        {{ section.settings.content_promotwo }}
                    </div>
                {% endif %}

            </div>

            {% if section.settings.image_promotwo != blank %}
                <div class="mdp-media">
                    <div>
                        <img class="mdp-image lazyload"
                             data-src="{{ section.settings.image_promotwo | img_url: section.settings.image_size_promotwo }}"
                             alt="{{ section.settings.title_promotwo }}">
                    </div>
                </div>
            {% endif %}

        </div>
    </div>
</div>

{% schema %}
{
  "name": "Promo home 3",
  "settings": [
    {
      "type": "text",
      "id": "title_promotwo",
      "label": "Heading",
      "default": "Product promo"
