{{"mdp-weare-404-1.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-404-1" data-variant="{{section.settings.variant}}">
  <div class="mdp-container">
  {% unless section.settings.image == blank %}
    <div class="mdp-media">
      <div class="mdp-placeholder" style="padding-top: calc({{ section.settings.image_size | split: "_" | first | split: "x" | last }} / {{ section.settings.image_size | split: "x" | first }} * 100%);">
        <img class="mdp-image lazyload" data-src="{{section.settings.image | img_url : section.settings.image_size}}" alt="{{section.settings.title}}" >
      </div>
    </div>
  {% endunless %}
  <div class="mdp-data">
    <div class="mdp-header">
      <h2 class="mdp-title">
        {{section.settings.title}}
      </h2>
      {% unless section.settings.subtitle == blank %}
        <div class="mdp-subtitle">
          {{section.settings.subtitle}}
        </div>
      {% endunless %}
    </div>
    {% unless section.settings.content == blank %}
      <div class="mdp-content">
        {{section.settings.content}}
      </div>
    {% endunless %}
      <div class="mdp-footer">
        {% unless section.settings.link == blank %}
        	<a class="mdp-button" href="{{section.settings.link}}">{{section.settings.button_string}}</a>
        {% endunless %}
      </div>    
  </div>
    </div>
</div>

{% schema %}
  {
    "name": "404 1",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Whoops!"
      },
	  {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading",
		"default": "Your style does not exist!"	
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content",
		"default": "<p>Any question? Please contact us, weâ€™re usually pretty quick.</p>"
      },
      {
         "type": "text",
         "id": "image_size",
         "label": "Image size",
         "default": "600x600_crop_center",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "type": "text",
        "id": "button_string",
        "label": "Button text",
        "default": "Get more info"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
	  {
        "type": "select",
        "id": "variant",
        "label": "Variant",
        "default": "right_text",
        "options": [
          {
            "label": "Left text",
            "value": "left_text"
          },
          {
            "label": "Right text",
            "value": "right_text"
          }
        ]
      }
    ]
  }
{% endschema %}