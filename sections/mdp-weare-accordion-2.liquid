{{"mdp-weare-accordion-2.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-accordion-2" data-variant="{{section.settings.variant}}" style="background-color: {{ section.settings.bg_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">
  <div class="mdp-container">
    {% unless section.settings.image == blank %}
    <div class="mdp-media">
      <div class="mdp-placeholder" style="padding-top: calc({{ section.settings.image_size | split: "_" | first | split: "x" | last }} / {{ section.settings.image_size | split: "x" | first }} * 100%);">
        <img class="mdp-image lazyload" data-src="{{section.settings.image | img_url : section.settings.image_size}}" alt="{{section.settings.title}}" >
      </div>
    </div>
    {% endunless %}
    <div class="mdp-data">
      <div class="mdp-header">
        <h2 class="mdp-title">
          {{section.settings.title}}
        </h2>
        {% unless section.settings.subtitle == blank %}
        <div class="mdp-subtitle">
          {{section.settings.subtitle}}
        </div>
        {% endunless %}
      </div>
      <div class="mdp-accordion">
        {% for block in section.blocks %}  
        {% case block.type %}
        {% when 'text_item' %}        
        <div class="mdp-text-item">
          <div class="mdp-header">
            <span class="mdp-icon mdp-closed">{% render 'mdp-weare-icon' with '005' %}</span>
            <span class="mdp-icon mdp-opened">{% render 'mdp-weare-icon' with '008' %}</span>
            <div class="mdp-title">
              {{block.settings.title}}
            </div>
          </div>
          <div class="mdp-data">
            <div class="mdp-content">
              {{block.settings.content}}
            </div>
            <div class="mdp-footer">
              {% unless block.settings.link == blank %}
              <a class="mdp-button" href="{{block.settings.link}}">
                <span class="mdp-text">{{block.settings.button_string}}</span>
                <span class="mdp-icon">{% render 'mdp-weare-icon' with '003' %}</span>
              </a>
              {% endunless %}
            </div>    
          </div>
        </div>
        {% endcase %}
        {% endfor %}
      </div>
    </div>  
  </div>
</div>

{% schema %}
  {
    "name": "Accordion 2",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Frequently asked questions"
      },
	  {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
         "type": "text",
         "id": "image_size",
         "label": "Image size",
         "default": "600x600_crop_center",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      },
	  {
        "type": "select",
        "id": "variant",
        "label": "Variant",
        "default": "left_text",
        "options": [
          {
            "label": "Left text",
            "value": "left_text"
          },
          {
            "label": "Right text",
            "value": "right_text"
          },
          {
            "label": "Left text inverted",
            "value": "left_text_inverted"
          },
          {
            "label": "Right text inverted",
            "value": "right_text_inverted"
          }
        ]
      },
      {
        "type": "text",
        "id": "padding_top",
        "label": "Padding top (px)",
		"default": "50"
      },
      {
        "type": "text",
        "id": "padding_bottom",
        "label": "Padding bottom (px)",
		"default": "50"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin bottom (px)"
      }
    ],	
    "blocks": [
      {
        "type": "text_item",
        "name": "Text item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Heading"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "text",
            "id": "button_string",
            "label": "Button text",
            "default": "Get more info"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Button link"
          }
        ]
      }
	],
    "presets": [{
      "name": "Accordion Image",
      "category": "SectionHub: weare"
    }]
  }
{% endschema %}