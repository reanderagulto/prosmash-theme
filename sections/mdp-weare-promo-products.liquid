{{ "mdp-weare-promo-products.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-promo-products"
     style="background-color: {{ section.settings.bg_color }};
             padding-top: {{ section.settings.padding_top }}px;
             padding-bottom: {{ section.settings.padding_bottom }}px;
             margin-top: {{ section.settings.margin_top }}px;
             margin-bottom: {{ section.settings.margin_bottom }}px;">
    <div class="mdp-container">
        <div class="mdp-grid" data-columns="2" data-gap="30">
            {% unless section.blocks.size == 0 %}
                {% for block in section.blocks %}
                    {% if block.type == 'product' %}
                        <div class="mdp-media">
                            <div class="mdp-img-product">
                                <img src="{{ block.settings.product_item | img_url: '234x397_crop_center' }}" alt="">
                            </div>
                            <div class="mdp-img-content">
                                <div class="mdp-content-text">
                                    <p class="mdp-type-product">{{ block.settings.type_product }}</p>
                                    <h3 class="mdp-title-product">{{ block.settings.product_item.title }}</h3>
                                    <p class="mdp-tag-product">{% for tag in block.settings.product_item.tags %}
                                            {{ tag }}
                                        {% endfor %}
                                    </p>
                                    {% if block.settings.product_item.available != true %}
                                        <p class="mdp-available-text">{{ block.settings.available_text }}</p>
                                    {% endif %}

                                    <a href="{{ block.settings.product_item.url }}"
                                       style="color: {{ section.settings.button_text_color }};"
                                       class="mdp-btn-product">{{ block.settings.btn_product }}</a>

                                    {% render 'mdp-weare-social-sharing' %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endunless %}
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Promo products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Product promo"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "image_size",
      "label": "Image size",
      "default": "600x600_crop_center",
      "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
    },
    {
      "type": "text",
      "id": "button_string",
      "label": "Button text",
      "default": "Get more info"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "padding_top",
      "label": "Padding top (px)"
    },
    {
      "type": "text",
      "id": "padding_bottom",
      "label": "Padding bottom (px)"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin bottom (px)"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product_item",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "type_product",
          "label": "Type product"
        },
        {
          "type": "text",
          "id": "available_text",
          "label": "Available product"
        },
        {
          "type": "text",
          "id": "btn_product",
          "label": "Button text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promo products",
      "category": "SectionHub: weare"
    }
  ]
}
{% endschema %}