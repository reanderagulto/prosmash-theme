{{"mdp-weare-hero-footer-home-7.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" 
     class="mdp mdp-weare-hero-footer-home-7 mdp-container-full-width lazyload
            {% if section.settings.inverted_herotwo %}mdp-inverted{% endif %}
            {% if section.settings.backed_herotwo %}mdp-backed{% endif %}"
     {% if section.settings.image_herotwo != blank %}
     data-bgset="{{section.settings.image_herotwo | img_url : section.settings.image_size_herotwo}}"
     {% endif %}
     style="padding-top: 0;
            padding-bottom: 0;
            margin-top: {{ section.settings.margin_top_herotwo }}px;
            margin-bottom: {{ section.settings.margin_bottom_herotwo }}px;
            background-repeat: no-repeat;
            background-size: {{ section.settings.background_size_herotwo }};">
  
    <div class="mdp-data mdp-data-hero-footer-home-7" 
         style="padding-top: {{ section.settings.padding_top_herotwo }}px;
                padding-bottom: {{ section.settings.padding_bottom_herotwo }}px;
                justify-content: {{section.settings.variant_herotwo}};">

      <div class="mdp-box-content">
        <div class="mdp-header">
          {% unless section.settings.subtitle_herotwo == blank %}
            <div class="mdp-subtitle">
              {{section.settings.subtitle_herotwo}}
            </div>
          {% endunless %}
          {% if section.settings.title_herotwo != blank %}
          <h4 class="mdp-title-hero-footer-home-7"
              style="{% if section.settings.use_local_styles == true %}color: {{section.settings.heading_color_herotwo}};{% endif %}
                     margin-left: {{section.settings.heading_margin_left_herotwo}}px;
                     background-color: {{section.settings.background_image_herotwo}};">{{section.settings.title_herotwo}}</h4>
          {% endif %}
        </div>
        {% unless section.settings.content_herotwo == blank %}
          <div class="mdp-hero-footer-home-7-text" style="color: {{section.settings.text_color_herotwo}};">
            {{section.settings.content_herotwo}}
          </div>                       
        {% endunless %}

        {% for block in section.blocks %}
          {% if block.type == 'list_item' %}
        <div class="mdp-hero-footer-home-7-text"
             style="color: {{section.settings.text_color_herotwo}};">
          <ul>
          {% endif %}
        {% endfor %}

            {% for block in section.blocks %}
              {% case block.type %}        	
                {% when 'list_item' %}
                <li>
                  <span class="mdp-icon"> <i class="{{block.settings.icon_class}}"></i></span>                                                       
                  {% unless block.settings.content == blank %}                    
                  {{block.settings.content}}                   
                  {% endunless %}                   
                </li>
              {% endcase %}
            {% endfor %}

        {% for block in section.blocks %}
          {% if block.type == 'list_item' %}
            </ul>
          </div>
          {% endif %}
        {% endfor %}

          {% if section.settings.link_herotwo != blank %}
            <div class="mdp-footer">
              <a class="mdp-button"
                 href="{{section.settings.link_herotwo}}">{{section.settings.button_string_herotwo}}</a>
            </div>
          {% endif %}


          {% if section.settings.subscribe_herotwo == true %}
            <div class="mdp-signup-form">
                {% form "customer" %}
                  {{ form.errors | default_errors }}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="mdp-row">
                    <input  type="email" placeholder="Subscribe by email" name="contact[email]"/>
                    <button type="submit" class="mdp-submit">Submit</button>    
                  </div>
                {% endform %}    
            </div>
          {% endif %}

      </div>
    </div>  
  
</div>

{% schema %}
  {
    "name": "Hero footer Home 7",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title_herotwo",
        "label": "Heading",
        "default": "Product promo"
      },
	  {
        "type": "text",
        "id": "subtitle_herotwo",
        "label": "Subheading"
      },
	  {
        "type": "text",
        "id": "heading_margin_left_herotwo",
        "label": "Heading margin left",
		"default": "0"
      },
      {
        "type": "checkbox",
        "id": "use_local_styles",
        "label": "Use local styles",
        "default": true
      },
	  {
        "type": "color",
        "id": "heading_color_herotwo",
        "label": "Heading color"
      },
	  {
        "type": "color",
        "id": "text_color_herotwo",
        "label": "Text color",
		"default": "#343434"
      },
      {
        "type": "image_picker",
        "id": "image_herotwo",
        "label": "Image"
      },
	  {
        "type": "select",
        "id": "background_size_herotwo",
        "label": "Background size",
        "default": "auto",
        "options": [
          {
            "label": "Auto",
            "value": "auto"
          },
          {
            "label": "Cover",
            "value": "cover"
          },
          {
            "label": "Contain",
            "value": "contain"
          }
        ]
      },
      {
        "type": "color",
        "id": "background_image_herotwo",
        "label": "Background color",
        "default": "#F9F9F9"
      },
      {
        "type": "richtext",
        "id": "content_herotwo",
        "label": "Content"
      },
      {
         "type": "text",
         "id": "image_size_herotwo",
         "label": "Image size",
         "default": "2000x500_crop_center",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "type": "text",
        "id": "button_string_herotwo",
        "label": "Button text",
        "default": "Start shopping"
      },
      {
        "type": "url",
        "id": "link_herotwo",
        "label": "Button link"
      },
      {
        "type": "checkbox",
        "id": "inverted_herotwo",
        "label": "Inverted",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "backed_herotwo",
        "label": "Backed",
        "default": false
      },
	  {
        "type": "checkbox",
        "id": "subscribe_herotwo",
        "label": "Show subscribe",
        "default": false
      },
	  {
        "type": "select",
        "id": "variant_herotwo",
        "label": "Align the block horizontally",
        "default": "start",
        "options": [
          {
            "label": "Left",
            "value": "start"
          },
          {
            "label": "Center",
            "value": "center"
          },
          {
            "label": "Right",
            "value": "end"
          }
        ]
      },
      {
        "type": "text",
        "id": "padding_top_herotwo",
        "label": "Padding top (px)"
      },
      {
        "type": "text",
        "id": "padding_bottom_herotwo",
        "label": "Padding bottom (px)"
      },
      {
        "type": "text",
        "id": "margin_top_herotwo",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom_herotwo",
        "label": "Margin bottom (px)"
      }
    ],
	"blocks": [
	  {
        "type": "list_item",
        "name": "List item",
        "settings": [
          {
			"type": "text",
            "id": "icon_class",
            "label": "Icon Class"
		  },		
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
	],
    "presets": [{
      "name": "Hero Full Width footer Home 7",
      "category": "SectionHub: weare"
    }]
  }
{% endschema %}