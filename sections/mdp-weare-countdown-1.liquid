{{"mdp-weare-countdown-1.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-countdown-1 {% if section.settings.boxed %}mdp-container{% endif %}" data-variant="{{section.settings.variant}}" >
  <div class="jarallax" data-speed="{{section.settings.parallax_speed}}" {% if section.settings.parallax and section.settings.image != blank %}data-jarallax{% endif %} {% if section.settings.video_url != blank %}data-jarallax-video="{{section.settings.video_url}}"{% endif %} style="background-color: {{ section.settings.bg_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; {% unless section.settings.margin_top == blank %}margin-top: {{ section.settings.margin_top }}px;{% endunless %} {% unless section.settings.margin_bottom == blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endunless %}">  
  {% if section.settings.image != blank %}
    {% if section.settings.parallax %}
      {% if section.settings.video_url == blank %}
          <img class="jarallax-img lazyload" data-src="{{section.settings.image | img_url : '2000x' }}" alt="">
      {% endif %}
    {% else %}
      <div class="mdp-overlay lazyload" data-bgset="{{section.settings.image | img_url : '2000x' }}"></div>
    {% endif %}
  {% endif %}
  <div class="mdp-data mdp-container">
    <div class="mdp-header">
      <h2 class="mdp-title">
        {{section.settings.title}}
      </h2>
    </div>
    {% unless section.settings.content == blank %}
      <div class="mdp-content">
        {{section.settings.content}}
      </div>
    {% endunless %}
      <div class="mdp-footer">
        <div class="mdp-countdown" data-time="{{section.settings.date }}">
          <div class="mdp-days">
            <div class="mdp-count">
              0
            </div>
            <span class="">
              {{section.settings.days_string }}
            </span>
          </div>
          <div class="mdp-hours">
            <div class="mdp-count">
              0
            </div>
            <span class="">              
              {{section.settings.hours_string }}
            </span>
          </div>
          <div class="mdp-minutes">
            <div class="mdp-count">
              0
            </div>
            <span class="">              
              {{section.settings.minutes_string }}
            </span>
          </div>
          <div class="mdp-seconds">
            <div class="mdp-count">
              0
            </div>
            <span class="">
              {{section.settings.seconds_string }}              
            </span>
          </div>
        </div>
        {% unless section.settings.link == blank %}
        	<a class="mdp-button" href="{{section.settings.link}}">{{section.settings.button_string}}</a>
        {% endunless %}
      </div>    
  </div>  
  </div>
</div>

{% schema %}
  {
    "name": "Countdown 1",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Christmas sales"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content",
		"default": "<p>Hurry up! Sale end in</p>"
      },
      {
        "type": "text",
        "id": "date",
        "label": "Date and time (UTC)",
        "default": "2021-01-01T00:00:00"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "parallax",
        "label": "Background parallax effect",
        "default": false
      },
	  {
        "type": "range",
        "id": "parallax_speed",
        "label": "Parallax speed",
        "default": 0.2,
        "min": -1,
        "max": 2,
        "step": 0.1
      },
      {
        "id": "video_url",
        "type": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "text",
        "id": "button_string",
        "label": "Button text",
        "default": "Get more info"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Button link"
      },
      {
        "type": "checkbox",
        "id": "boxed",
        "label": "Boxed",
        "default": false
      },
	  {
        "type": "select",
        "id": "variant",
        "label": "Variant",
        "default": "style_1",
        "options": [
          {
            "label": "Style 1",
            "value": "style_1"
          },
          {
            "label": "Style 2",
            "value": "style_2"
          }
        ]
      },
      {
        "type": "text",
        "id": "padding_top",
        "label": "Padding top (px)"
      },
      {
        "type": "text",
        "id": "padding_bottom",
        "label": "Padding bottom (px)"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin bottom (px)"
      },
      {
		"type": "header",
		"content": "Strings"
	  },
      {
         "type": "text",
         "id": "days_string",
         "label": "'Days' string",
         "default": "Days"
      },
      {
         "type": "text",
         "id": "hours_string",
         "label": "'Hours' string",
         "default": "Hours"
      },
      {
         "type": "text",
         "id": "minutes_string",
         "label": "'Minutes' string",
         "default": "Minutes"
      },
      {
         "type": "text",
         "id": "seconds_string",
         "label": "'Seconds' string",
         "default": "Seconds"
      }
    ],	
    "presets": [{
      "name": "Countdown",
      "category": "SectionHub: weare"
    }]
  }
{% endschema %}