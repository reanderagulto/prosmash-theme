{{"collection-campaign-top-home-13.css" | asset_url | stylesheet_tag }}

{% assign image_size = section.settings.image_size | default: '270x370_crop_center' %}

{% assign slider = section.settings.slider | default: false %}

{% assign vendor = section.settings.vendor | default: false %}

{% assign redirect = section.settings.redirect | default: false %}

{% assign sale_string = section.settings.sale_string %}
{% unless sale_string %}
    {% assign sale_string = 'products.product.on_sale' | t %}
{% endunless %}

{% assign new_string = section.settings.new_string %}
{% unless new_string %}
    {% assign new_string = 'products.product.new' | t %}
{% endunless %}

{% assign sold_out_string = section.settings.sold_out_string %}
{% unless sold_out_string %}
    {% assign sold_out_string = 'products.product.sold_out' | t %}
{% endunless %}

{% assign add_cart_string = section.settings.add_cart_string %}
{% unless add_cart_string %}
    {% assign add_cart_string = 'products.product.add_to_cart' | t %}
{% endunless %}

{% assign select_options_string = section.settings.select_options_string %}
{% unless select_options_string %}
    {% assign select_options_string = 'products.product.select_options' | t %}
{% endunless %}

{% assign height = section.settings.container_height %}

<div class="mdp-container-campaign-top">
    <div id="mdp-weare-{{ section.id }}"
         class="mdp mdp-boxed collection-campaign-top-home-13"
         style="margin-top: {{ section.settings.margin_top }}px;
                margin-bottom: {{ section.settings.margin_bottom }}px;">

        <div class="mdp-grid mdp-stretch-height" data-columns="3" data-gap="30">
            {% if section.settings.selected_collection == blank or collections[section.settings.selected_collection] == empty %}
                {% for product in collections['all'].products limit: 3 %}
                    {% render 'mdp-weare-product-card', product: product, price: section.settings.show_price %}
                {% endfor %}
            {% else %}

                {% assign count = 1 %}
                {% for product in collections[section.settings.selected_collection].products limit: 3 %}

                    {% if count == 2 %}
                        <div class="mdp-weare-product-card">
                            <div class="mdp-media">
                                <a href="{{ product.url }}">
                                    {% if slider %}
                                        <div class="swiper-container swiper-slideshow-home-13{{ count }} mdp-swiper-container">
                                            <div class="swiper-wrapper mdp-swiper-wrapper">
                                                {% for image in product.images %}
                                                    {% if product.featured_image == image %}
                                                        <div class="swiper-slide mdp-swiper-slide">
                                                            <div>
                                                                <img class="mdp-image lazyload" data-src="{{image | img_url : "560x305_crop_center"}}" alt="{{image.alt}}" >
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                                {% for image in product.images %}
                                                    {% if product.featured_image != image %}
                                                        <div class="swiper-slide mdp-swiper-slide">
                                                            <div>
                                                                <img class="mdp-image lazyload" data-src="{{image | img_url : "560x305_crop_center"}}" alt="{{image.alt}}" >
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>

                                        </div>

                                        <script>
                                            const swiperSlideshowHome13{{ count }} = new Swiper('.swiper-slideshow-home-13{{ count }}', {
                                                // Optional parameters
                                                lidesPerView: 'auto',
                                                direction: 'horizontal',
                                                slidesPerView: 1,
                                                centeredSlides: false,
                                                speed: 500,
                                                spaceBetween: 30,
                                                loop: true,
                                                autoplay: {
                                                    delay: 5000
                                                },
                                                effect: 'slide',
                                                allowTouchMove: true,
                                                freeMode: true,
                                                watchSlidesVisibility: true,
                                                watchSlidesProgress: true,
                                                hashNavigation: false,

                                            });

                                            swiperSlideshowHome13{{ count }}.init();
                                        </script>

                                    {% else %}
                                        <div>
                                            <img class="mdp-image lazyload" data-src="{{product.featured_image | img_url : image_size}}" alt="{{product.featured_image.alt}}" >
                                        </div>
                                    {% endif %}
                                </a>
                                <div class="mdp-box-collection">
                                    <h3 class="mdp-collection-name">
                                        {% for collection in product.collections %}
                                            {{ collection.title }}
                                        {% endfor %}
                                    </h3>
                                    <a href="{% for collection in product.collections %} {{ collection.url }} {% endfor %}" class="mdp-link-collection">Discover more</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="mdp-weare-product-card">
                            <div class="mdp-media">
                                <a href="{{ product.url }}">
                                    {% if slider %}
                                        <div class="swiper-container swiper-slideshow-home-13{{ count }} mdp-swiper-container">
                                            <div class="swiper-wrapper mdp-swiper-wrapper">
                                                {% for image in product.images %}
                                                    {% if product.featured_image == image %}
                                                        <div class="swiper-slide mdp-swiper-slide">
                                                            <div>
                                                                <img class="mdp-image lazyload" data-src="{{image | img_url : image_size}}" alt="{{image.alt}}" >
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                                {% for image in product.images %}
                                                    {% if product.featured_image != image %}
                                                        <div class="swiper-slide mdp-swiper-slide">
                                                            <div>
                                                                <img class="mdp-image lazyload" data-src="{{image | img_url : image_size}}" alt="{{image.alt}}" >
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                            <div class="mdp-swiper-button-prev swiper-button-prev-slideshow-home-13{{ count }}"></div>
                                            <div class="mdp-swiper-button-next swiper-button-next-slideshow-home-13{{ count }}"></div>
                                        </div>

                                        <script>
                                            const swiperSlideshowHome13{{ count }} = new Swiper('.swiper-slideshow-home-13{{ count }}', {
                                                // Optional parameters
                                                lidesPerView: 'auto',
                                                direction: 'horizontal',
                                                slidesPerView: 1,
                                                centeredSlides: false,
                                                speed: 500,
                                                spaceBetween: 30,
                                                loop: true,
                                                autoplay: {
                                                    delay: 5000
                                                },
                                                effect: 'slide',
                                                allowTouchMove: true,
                                                freeMode: true,
                                                watchSlidesVisibility: true,
                                                watchSlidesProgress: true,
                                                hashNavigation: false,

                                                // Navigation arrows
                                                navigation: {
                                                    nextEl: '.swiper-button-next-slideshow-home-13{{ count }}',
                                                    prevEl: '.swiper-button-prev-slideshow-home-13{{ count }}',
                                                }
                                            });

                                            swiperSlideshowHome13{{ count }}.init();
                                        </script>

                                    {% else %}
                                        <div>
                                            <img class="mdp-image lazyload" data-src="{{product.featured_image | img_url : image_size}}" alt="{{product.featured_image.alt}}" >
                                        </div>
                                    {% endif %}
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    {% assign count = count | plus:1 %}

                {% endfor %}
            {% endif %}
        </div>
        {% if section.settings.show_btn_cl == true %}
            <div class="mdp-box-btn">
                <a href="{% if section.settings.selected_collection != blank %}{{section.settings.selected_collection.url}}{% else %} javascript:void(0);{% endif %}">{{section.settings.btn_text_collection}}</a>
            </div>
        {% endif %}
    </div>
</div>

{% style %}
    .mdp-container-campaign-top{
        background-color: {{ section.settings.background }};
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
{% endstyle %}

