<section class="new-products">
  <div class="mdp-container">
    <div class="col-left">
      <div class="heading-container">
        <h2>{{ section.settings.heading }}</h2>
      </div>
      <div class="cta-btn">
        <a href="{{ section.settings.cta_link }}">{{ section.settings.cta_text }}</a>
      </div>
    </div>

    <div class="col-right">
      <div class="product-grid">
        {% assign counter = 0 %}
        {% for product in all_products %}
          {% if product.metafields.global.new_arrival == true %}
            <div class="product-card">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}">
                <h3>{{ product.title }}</h3>
                <p>{{ product.price | money }}</p>
              </a>
            </div>
            {% assign counter = counter | plus: 1 %}
            {% if counter == 4 %}
              {% break %}
            {% endif %}
          {% endif %}
        {% endfor %}
        {% if counter == 0 %}
          <p>No new arrival products found.</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>





{% schema %}
{
  "name": "Prosmash HP New Arrivals",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "New In"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Product Collection"
    }
  ],
  "presets": [
    {
      "name": "Prosmash HP New Arrivals",
      "category": "Prosmash"
    }
  ]
}
{% endschema %}

