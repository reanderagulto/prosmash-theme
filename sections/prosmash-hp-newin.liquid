<section class="new-products">
  <div class="mdp-container">
    <div class="col-left">
      <div class="heading-container">
        <h2>New In</h2>
        <div class="cta-btn">
          <a href="#">SHOP NOW</a>
        </div>
      </div>
      
    </div>

    <div class="col-right">
      <div class="product-grid">
        {% for product in collections['new-arrivals'].products %}
          <div class="product-card">
            <a href="{{ product.url }}">
              <div class="prod-img">
                <div class="img-container">
                  <div class="canvas" style="
                      background-image: url('{{ product.featured_image | image_url: width: 246 }}');
                      background-color: #F0F0F0;
                      background-size: cover;
                      background-position: center;
                      width: 246px;
                      height: 304px;">
                  </div>

                </div>
                {% comment %} <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}"> {% endcomment %}
              </div>
              <div class="prod-details">
                <div class="prod-title">{{ product.title |  truncate: 25 }}</div>
                <div class="prod-price">{{ product.price | money }}</div>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

