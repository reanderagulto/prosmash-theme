      <div class="mdp-image-item">
        <div class="mdp-media">
          <div class="mdp-placeholder" style="width: {{ image_size | split: "x" | first }}px; padding-top: calc({{ image_size | split: "_" | first | split: "x" | last }} / {{ image_size | split: "x" | first }} * 100%);">
            <img class="mdp-image lazyload" data-src="{{block.settings.image | img_url : image_size}}">
          </div>
        </div>
      </div>
    </div>
	{% when 'link_image' %}
