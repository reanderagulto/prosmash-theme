  <div class="mdp-isotope-items" data-columns="{{section.settings.columns}}" data-columns-md="{{section.settings.columns_md}}" data-columns-sm="{{section.settings.columns_sm}}" data-columns-xs="{{section.settings.columns_xs}}" data-gutter="{{section.settings.gutter}}">
    {% for block in section.blocks %}  
    {% assign image_size = section.settings.image_size %}
    {% if block.settings.image_size and block.settings.image_size != blank %}            
    {% assign image_size = block.settings.image_size %}
    {% endif %}
