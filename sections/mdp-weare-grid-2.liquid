          #id{{block.id}} {
            padding-top: {{100.0 | divided_by: block.settings.aspect_ratio_md | times: 100 | round}}%;
          }
        }
        @media (max-width: 992px) {
          #id{{block.id}} {
            padding-top: {{100.0 | divided_by: block.settings.aspect_ratio_sm | times: 100 | round}}%;
          }
        }
        @media (max-width: 768px) {
          #id{{block.id}} {
            padding-top: {{100.0 | divided_by: block.settings.aspect_ratio_xs | times: 100 | round}}%;
          }
        }
      </style>
      <div>
        <div class="mdp-header-item {% if block.settings.inverted %}mdp-inverted{% endif %}" id="id{{block.id}}">
          <div class="mdp-data">
            <div class="mdp-header">
              <div class="mdp-title">
                {{block.settings.title}}
              </div>
            </div>
            {% unless block.settings.content == blank %}
            <div class="mdp-content">
              {{block.settings.content}}
            </div>
            {% endunless %}
            <div class="mdp-footer">
              {% unless block.settings.link == blank %}
              <a class="mdp-button" href="{{block.settings.link}}">{{block.settings.button_string}}</a>
              {% endunless %}
            </div>    
          </div>
        </div>
      </div>
    </div>
	{% when 'text' %}
