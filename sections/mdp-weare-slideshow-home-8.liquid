{{ "mdp-weare-slideshow-home-8.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp {% if section.settings.boxed %}mdp-container{% endif %} mdp-weare-slideshow-home-8"
     style="{% if section.settings.margin_top != blank %}margin-top: {{ section.settings.margin_top }}px;{% endif %}
             {% if section.settings.margin_bottom != blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endif %}">
    <div class="swiper-container mdp-swiper-container swiper-slideshow-home-8"
         data-slidesPerView="1"
         data-navigation="true">
        <div class="swiper-wrapper mdp-swiper-wrapper">
            {% for block in section.blocks %}
                <div class="swiper-slide mdp-swiper-slide">
                    {% case block.type %}
                        {% when 'slide' %}
                            <div class="mdp-slide mdp-grid {% if block.settings.inverted %}mdp-inverted{% endif %}"
                                 data-columns="2"
                                 data-gap="30">
                                <div class="mdp-img-slide">
                                    <img src="{{ block.settings.image | img_url: '2000x' }}"
                                         style="height: {{ section.settings.height }}px;"
                                         alt=""/>
                                </div>
                                <div class="mdp-data">
                                    <div class="mdp-box-text">
                                        <div class="mdp-box">

                                            {% if block.settings.content != blank %}
                                                <div class="mdp-content" {% if block.settings.use_local_styles == true %}
                                                    style="color: {{ block.settings.heading_color }};"{% endif %}>{{ block.settings.content }}</div>
                                            {% endif %}

                                            <h4 class="mdp-title"
                                            {% if block.settings.use_local_styles == true %}
                                                style="color: {{ block.settings.heading_color }};"{% endif %}>
                                                {{ block.settings.title }}
                                            </h4>

                                            {% if block.settings.link != blank %}
                                                <div class="mdp-footer">
                                                    <a class="mdp-button"
                                                       href="{{ block.settings.link }}">{{ block.settings.button_string }}</a>
                                                </div>
                                            {% endif %}

                                        </div>
                                    </div>
                                </div>
                            </div>
                    {% endcase %}
                </div>
            {% endfor %}
        </div>

        <div class="swiper-button-prev swiper-button-prev-slideshow-home-8 swiper-button-prev-slideshow-{{ section.id }}"></div>
        <div class="swiper-button-next swiper-button-next-slideshow-home-8 swiper-button-next-slideshow-{{ section.id }}"></div>

        <div class="swiper-pagination swiper-pagination-slideshow-home-8 swiper-pagination-slideshow-{{ section.id }}"></div>

    </div>
</div>

<script>
    const swiperSlideshowHome8_{{ section.id | replace: "-", "_" }} = new Swiper('.swiper-slideshow-{{ section.id }}', {
        // Optional parameters
        lidesPerView: 'auto',
        direction: 'horizontal',
        slidesPerView: 1,
        centeredSlides: false,
        speed: 500,
        spaceBetween: 30,
        loop: true,
        autoplay: {
            delay: 5000
        },
        effect: 'slide',
        allowTouchMove: true,
        freeMode: true,
        watchSlidesVisibility: true,
        watchSlidesProgress: true,
        hashNavigation: false,
        pagination: {
            el: '.swiper-pagination-slideshow-{{ section.id }}'
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next-slideshow-{{ section.id }}',
            prevEl: '.swiper-button-prev-slideshow-{{ section.id }}',
        }
    });

    swiperSlideshowHome8_{{ section.id | replace: "-", "_" }}.init();
</script>

