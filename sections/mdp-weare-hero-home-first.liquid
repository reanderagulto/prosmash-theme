        "label": "Show subscribe",
        "default": false
      },
	  {
        "type": "select",
        "id": "variant_herotwo",
        "label": "Align the block horizontally",
        "default": "start",
        "options": [
          {
            "label": "Left",
            "value": "start"
          },
          {
            "label": "Center",
            "value": "center"
          },
          {
            "label": "Right",
