{{"mdp-weare-hero-home-first.css" | asset_url | stylesheet_tag }}

<div class="jarallax"
     data-speed="0.5"
     data-jarallax=""
     style="padding-top: 0;
            padding-bottom: 0; 
            margin-top: {{ section.settings.margin_top_herotwo }}px; 
            margin-bottom: {{ section.settings.margin_bottom_herotwo }}px;
            background-repeat: no-repeat; background-size: {{ section.settings.background_size_herotwo }};">

    <img class="jarallax-img lazyload" data-src="{{section.settings.image_herotwo | img_url : section.settings.image_size_herotwo }}" alt="">

  <div id="mdp-weare-{{ section.id }}" 
       class="mdp mdp-weare-hero-home-first
       {% if section.settings.boxed == true %}mdp-container{% else %}mdp-boxed{% endif %}
       lazyload
       {% if section.settings.inverted_herotwo %}mdp-inverted{% endif %}
       {% if section.settings.backed_herotwo %}mdp-backed{% endif %} mdp-grid"
       data-columns="1"
       data-gap="30">

      <div class="mdp-data mdp-data-hero-home-first" 
           style="background-color: {{section.settings.background_image_herotwo}}; 
                  padding-top: {{ section.settings.padding_top_herotwo }}px; 
                  padding-bottom: {{ section.settings.padding_bottom_herotwo }}px;
                  justify-content: {{section.settings.variant_herotwo}};">
        <div class="mdp-box-content">
          <div class="mdp-header">
            <h4 class="mdp-title-hero-home-first"
                style="{% if section.settings.use_local_styles == true %}color: {{section.settings.heading_color_herotwo}};{% endif %}
                       margin-left: {{section.settings.heading_margin_left_herotwo}}px;">
              <a href="{{section.settings.title_link}}">{{section.settings.title_herotwo}}</a>
            </h4>
          </div>
          {% unless section.settings.content_herotwo == blank %}
            <div class="mdp-hero-home-first-text">
              {{section.settings.content_herotwo}}
            </div>                       
          {% endunless %}

          <div class="mdp-hero-home-first-text"
               style="color: {{section.settings.text_color_herotwo}};">
            <ul> 
              {% for block in section.blocks %}
                {% case block.type %}        	
                  {% when 'list_item' %}
                  <li>
                    <span class="mdp-icon"> <i class="{{block.settings.icon_class}}"></i></span>                                                       
                    {% unless block.settings.content == blank %}                    
                    {{block.settings.content}}                   
                    {% endunless %}                   
                  </li>
                {% endcase %}
              {% endfor %}
            </ul>
          </div>

            <div class="mdp-footer">
              {% unless section.settings.link_herotwo == blank %}
                  <a class="mdp-button" href="{{section.settings.link_herotwo}}">{{section.settings.button_string_herotwo}}</a>
              {% endunless %}
            </div>  
            {% if section.settings.subscribe_herotwo == true %}
              <div class="mdp-signup-form">
                  {% form "customer" %}
                    {{ form.errors | default_errors }}
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <div class="mdp-row">
                      <input  type="email" placeholder="Subscribe by email" name="contact[email]"/>
                      <button type="submit" class="mdp-submit">Submit</button>    
                    </div>
                  {% endform %}    
              </div>
            {% endif %}
        </div>
      </div>  

  </div>
</div>

{% if section.settings.use_local_styles == true %}
  <style>
    .mdp-weare-hero-home-first .mdp-data .mdp-box-content div p {
      color: {{section.settings.text_color_herotwo}};
    }
  </style>
{% endif %}

{% schema %}
  {
    "name": "Hero Home first",
    "settings": [	  	       
      {
        "type": "text",
        "id": "title_herotwo",
        "label": "Heading",
