          }
        ]
      },
      {
        "type": "text",
        "id": "padding_top_herotwo",
        "label": "Padding top (px)"
      },
      {
        "type": "text",
        "id": "padding_bottom_herotwo",
        "label": "Padding bottom (px)"
      },
      {
        "type": "text",
        "id": "margin_top_herotwo",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom_herotwo",
        "label": "Margin bottom (px)"
      }
    ],
	"blocks": [
	  {
        "type": "list_item",
        "name": "List item",
        "settings": [
          {
			"type": "text",
            "id": "icon_class",
            "label": "Icon Class"
		  },		
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
	],
    "presets": [{
      "name": "Hero Full Width Home first",
      "category": "SectionHub: weare"
    }]
  }
