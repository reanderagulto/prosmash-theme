{{ "prosmash-hp-categories.css" | asset_url | stylesheet_tag }}
{{ "prosmash-global.css" | asset_url | stylesheet_tag }}

<section class="categories">
  <div class="mdp-container">
    <div class="heading-container">
      <h3>Categories</h3>
    </div>
    <div class="mdp-col mdp-row-full categories-grid">
      {% for block in section.blocks %}
        {% assign col = block.settings.collection %}
        {% if col != blank %}t
          <div class="category-item">
            <a href="{{ col.url }}">
              {% if col.featured_image %}
                <div class="img-container">
                  <img src="{{ block.settings.collection_img | image_url }}" alt="{{ col.title }}">
                  {% comment %} <img src="{{ col.featured_image | image_url: width: 500 }}" alt="{{ col.title }}"> {% endcomment %}
                </div>
              {% endif %}
              <div class="item-title">{{ col.title }}</div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>



{% schema %}
{
  "name": "Prosmash HP Categories",
  "settings": [],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        },
        {
          "type": "image_picker",
          "id": "collection_img",
          "label": "Collection Image"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Prosmash HP Categories",
      "category": "Prosmash"
    }
  ]
}
{% endschema %}
