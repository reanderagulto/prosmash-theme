{{"mdp-weare-promo-home-5.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}" class="mdp mdp-weare-promo-home-5"
     style="background-color: {{ section.settings.bg_color_promotwo }};
             padding-top: {{ section.settings.padding_top_promotwo }}px;
             padding-bottom: {{ section.settings.padding_bottom_promotwo }}px;
             margin-top: {{ section.settings.margin_top_promotwo }}px;
             margin-bottom: {{ section.settings.margin_bottom_promotwo }}px;">
  <div class="mdp-container">
    <div class="mdp-grid" data-columns="2" data-gap="30">

      {% if section.settings.image_promotwo != blank %}
        <div class="mdp-media mdp-data-vertical">
          <div>
            <img class="mdp-image lazyload" data-src="{{section.settings.image_promotwo | img_url : section.settings.image_size_promotwo}}" alt="{{section.settings.title_promotwo}}" >
          </div>
        </div>
      {% endif %}

      <div class="mdp-data mdp-data-vertical">
        <div class="mdp-box-text">
          <div class="mdp-header">
            <h2 class="mdp-title">
              {{section.settings.title_promotwo}}
            </h2>
            {% unless section.settings.subtitle_promotwo == blank %}
              <div class="mdp-subtitle">
                {{section.settings.subtitle_promotwo}}
              </div>
            {% endunless %}
          </div>

          <div class="mdp-footer">
            {% unless section.blocks.size == 0 %}
              {% for block in section.blocks %}
                <div class="mdp-items mdp-two-columns">
                  <div class="mdp-item">
                    {% if block.type == 'list' %}
                      {% if block.settings.icon_class != '' %}
                        <span class="mdp-fa-icon"><i class="{{block.settings.icon_class}}"></i></span>
                      {% endif %}
                      <span class="mdp-text">
                    {{ block.settings.text_promotwo }}
                  </span>
                    {% endif %}

                    {% if block.type == 'list_link' %}
                      {% if block.settings.icon_class_link != '' %}
                        <span class="mdp-fa-icon"><i class="{{block.settings.icon_class_link}}"></i></span>
                      {% endif %}
                      <span class="mdp-text">
                    <a href="{{ block.settings.link_url }}">{{ block.settings.text_promotwo_link }}</a>
                  </span>
                    {% endif %}
                  </div>
                </div>

                {% if block.type == 'product_link' %}
                  <div class="mdp-product-box">
                    <img src="{{block.settings.image_product | img_url : block.settings.image_size_produst}}" alt="">
                    <p class="mdp-type-product">{{block.settings.type_product}}</p>
                    <a class="mdp-name-product" style="text-align: {{block.settings.text_align}}; font-size: {{block.settings.font_size}}px;" href="{{block.settings.link_product}}">{{block.settings.name_product}}</a>
                    {% if block.settings.product_price != blank %}
                      <p class="mdp-price-product">{{cart.currency.symbol}}{{block.settings.product_price}}</p>
                    {% endif %}
                  </div>
                {% endif %}

              {% endfor %}
            {% endunless %}
          </div>


          <div class="mdp-content">
            {% unless section.settings.content_promotwo == blank %}
              {{section.settings.content_promotwo}}
            {% endunless %}

            {% if section.settings.button_string_promotwo != blank %}
              <a href="{{section.settings.link_promotwo}}" class="mdp-link-content">{{section.settings.button_string_promotwo}}</a>
            {% endif %}
          </div>

        </div>
      </div>

    </div>

  </div>
</div>

{% style %}
  .mdp-weare-promo-home-5 .mdp-container .mdp-grid:before{
    content: "";
    display: block;
    width: calc(100% - 30px);
    margin: 0 15px;
    border-top: 3px solid #343434;
  }

  .mdp-weare-promo-home-5 .mdp-container .mdp-grid:after{
    content: "";
    display: block;
    width: calc(100% - 30px);
    margin: 0 15px;
    border-bottom: 3px solid #343434;
  }
{% endstyle %}

