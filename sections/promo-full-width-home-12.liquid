{{"promo-full-width-home-12.css" | asset_url | stylesheet_tag }}

<div id="mdp-weare-{{ section.id }}"
     class="mdp mdp-weare-promo-full-width-home-12 mdp-container-full-width"
     data-variant="{{section.settings.variant_promotwo}}"
     style="background-color: {{ section.settings.bg_color_promotwo }};
             padding-top: {{ section.settings.padding_top_promotwo }}px;
             padding-bottom: {{ section.settings.padding_bottom_promotwo }}px;
             margin-top: {{ section.settings.margin_top_promotwo }}px;
             margin-bottom: {{ section.settings.margin_bottom_promotwo }}px;">
    <div class="mdp-grid" data-columns="2" data-gap="30">

      <div class="mdp-data">
        <div class="mdp-header">
          {% unless section.settings.subtitle_promotwo == blank %}
            <div class="mdp-subtitle">{{section.settings.subtitle_promotwo}}</div>
          {% endunless %}
          <h2 class="mdp-title">
              {{section.settings.title_promotwo}}
          </h2>
        </div>

        {% if section.blocks.size != 0 %}
          <div class="mdp-footer">
            {% for block in section.blocks %}
              {% if block.type == 'product_link' %}
                <div class="mdp-product-box">
                  <img src="{{block.settings.image_product | img_url : block.settings.image_size_produst}}" alt="">
                  <p class="mdp-type-product">{{block.settings.type_product}}</p>
                  <a class="mdp-name-product"
                     style="text-align: {{block.settings.text_align}};
                             font-size: {{block.settings.font_size}}px;"
                     href="{{block.settings.link_product}}">{{block.settings.name_product}}</a>
                  <a class="mdp-link-text" href="{{block.settings.link_product}}">{{block.settings.link_text}}</a>
                  {% if block.settings.product_price != blank %}
                      <p class="mdp-price-product">{{cart.currency.symbol}}{{block.settings.product_price}}</p>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

      </div>

      {% if section.settings.image_promotwo != blank %}
        <div class="mdp-media">
          <div class="mdp-box-img">
            <img class="mdp-image lazyload"
                 data-src="{{section.settings.image_promotwo | img_url : section.settings.image_size_promotwo}}"
                 alt="{{section.settings.title_promotwo}}" >
            <img src="{{ section.settings.watermark | img_url : "245x245_crop_center" }}" class="mdp-watermark" alt="">
          </div>
        </div>
      {% endif %}

    </div>
</div>

{% schema %}
{
  "name": "Promo full width home 12",
  "settings": [
    {
      "type": "text",
      "id": "title_promotwo",
      "label": "Heading",
      "default": "Product promo"
    },
    {
      "type": "text",
      "id": "subtitle_promotwo",
      "label": "Subheading"
    },
    {
      "type": "image_picker",
      "id": "image_promotwo",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "image_size_promotwo",
      "label": "Image size",
      "default": "920x1063_crop_center",
      "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
    },
    {
      "type": "image_picker",
      "id": "watermark",
      "label": "Watermark"
    },
    {
      "type": "text",
      "id": "button_string_promotwo",
      "label": "Button text",
      "default": "Get more info"
    },
    {
      "type": "url",
      "id": "link_promotwo",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "bg_color_promotwo",
      "label": "Background color"
    },
    {
      "type": "select",
      "id": "variant_promotwo",
      "label": "Variant",
      "default": "left_text",
      "options": [
        {
          "label": "Left text",
          "value": "left_text"
        },
        {
          "label": "Right text",
          "value": "right_text"
        }
      ]
    },
    {
      "type": "text",
      "id": "padding_top_promotwo",
      "label": "Padding top (px)"
    },
    {
      "type": "text",
      "id": "padding_bottom_promotwo",
      "label": "Padding bottom (px)"
    },
    {
      "type": "text",
      "id": "margin_top_promotwo",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom_promotwo",
      "label": "Margin bottom (px)"
    }
  ],
  "blocks": [
    {
      "type": "product_link",
      "name": "Product link",
      "settings": [
        {
          "type": "text",
          "id": "name_product",
          "label": "Name product"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Align name product",
          "default": "center",
          "options": [
            {
              "label": "Center",
              "value": "center"
            },
            {
              "label": "Right",
              "value": "right"
            },
            {
              "label": "Left",
              "value": "left"
            }
          ]
        },
        {
          "type": "text",
          "id": "font_size",
          "label": "Product font size(px)",
          "default": "16"
        },
        {
          "type": "text",
          "id": "type_product",
          "label": "Type product"
        },
        {
          "type": "text",
          "id": "product_price",
          "label": "Product price"
        },
        {
          "type": "image_picker",
          "id": "image_product",
          "label": "Image product"
        },
        {
          "type": "text",
          "id": "image_size_produst",
          "label": "Image size produst",
          "default": "600x600_crop_center",
          "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link text"
        },
        {
          "type": "url",
          "id": "link_product",
          "label": "Link product"
        }
      ]}
  ],
  "presets": [{
    "name": "Promo full width home 12",
    "category": "SectionHub: weare"
  }]
}
{% endschema %}