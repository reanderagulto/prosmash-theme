{{ "prosmash-global.css" | asset_url | stylesheet_tag }}
{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}
<script src="{{ 'slick.min.js' | asset_url }}" defer></script>
{{ "prosmash-hp-banner.js" |  asset_url |  script_tag }}

<section class="prosmash-player-kit">
  <div class="mdp-container">
    <div class="heading-container">
      <h3>Pro Player Kits</h3>
      <p>Shop and complete the look of your favorite padel players.</p>
    </div>
    <div class="player-kit-cards-container">
      {% for block in section.blocks %}
        {% if block.type == 'card' %}
          <div class="player-kit-card">
            <div class="card-featured-image">
              <img src="{{ block.settings.player_image | image_url }}" alt="">
            </div>

            <div class="card-content">
              <div class="player-title">{{ block.settings.first_name }} {{ block.settings.last_name }}</div>
              <div class="text">Brands that {{ block.settings.first_name }} wears:</div>
              <div class="brands">
                {% if block.settings.brand_logo_1 %}
                  <img src="{{ block.settings.brand_logo_1 | image_url: width: 100 }}" alt="Brand Logo 1">
                {% endif %}
                {% if block.settings.brand_logo_2 %}
                  <img src="{{ block.settings.brand_logo_2 | image_url: width: 100 }}" alt="Brand Logo 2">
                {% endif %}
                {% if block.settings.brand_logo_3 %}
                  <img src="{{ block.settings.brand_logo_3 | image_url: width: 100 }}" alt="Brand Logo 3">
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "HP Pro Player Kit",
  "settings": [],
  "blocks": [
    {
      "type": "card",
      "name": "Player Kit Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "player_image",
          "label": "Player Image"
        },
        {
          "type": "text",
          "id": "first_name",
          "label": "First Name"
        },
        {
          "type": "text",
          "id": "last_name",
          "label": "Last Name"
        },
        {
          "type": "image_picker",
          "id": "brand_logo_1",
          "label": "Brand Logo 1"
        },
        {
          "type": "image_picker",
          "id": "brand_logo_2",
          "label": "Brand Logo 2"
        },
        {
          "type": "image_picker",
          "id": "brand_logo_3",
          "label": "Brand Logo 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pro Player Kit Carousel",
      "category": "Prosmash"
    }
  ]
}
{% endschema %}

<style>
