.prosmash-player-kit .player-kit-cards-container {
    /* Let Slick handle the layout */
    height: auto;
    display: block;
}
.prosmash-player-kit .player-kit-card {
    width: 269px;
    height: 100%;
    margin-right: 79px;
    box-sizing: border-box;
    padding-top: 100px
}
.prosmash-player-kit .slick-track {
  display: flex !important;
}
.prosmash-player-kit .slick-slide {
  float: none;
  display: flex !important;
  flex-direction: column;
  height: auto;
}

.prosmash-player-kit .slick-slide:last-child {
  margin-right: 0;
}
.prosmash-player-kit .card-content {
    display: flex;
    padding: 24px 24px 40px 24px;
    flex-direction: column;
    align-items: flex-start;
    border-top: 8px solid var(--Secondary-1-Forest-Shade, #819972);
    background: var(--Secondary-1-Dark-Moss-Green, #42662B);
    position: relative;
    z-index: 1;
}
.prosmash-player-kit .card-content .player-title {
    color: var(--Primary-White, #FFF);
    font-family: Lexend;
    font-size: 22px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}
.prosmash-player-kit .card-content .text {
    color: var(--Primary-White, #FFF);
    font-family: "Red Hat Display";
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.prosmash-player-kit .card-content .brands {
    margin-top: 16px;
}
.prosmash-player-kit .card-content .brands img {
    width: 58.5px;
    height: 12px;
    aspect-ratio: 58.50/12.00;
    filter: invert(1);
}

.prosmash-player-kit .player-kit-card .card-featured-image {
    height: 273px;
    width: 100%;
    background: #42662B;
}
.prosmash-player-kit .player-kit-card .card-featured-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transform: scale(1.3);
    object-position: center;
}
</style>

<script>
  $(document).ready(function () { 

   $('.player-kit-cards-container').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      infinite: true,
      arrows: true,
      dots: false,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 2
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1
          }
        }
      ]
    });
  });

  
</script>