  .prosmash-player-kit .heading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}
.prosmash-player-kit .heading-container h3,
.prosmash-player-kit .heading-container p {
    margin: 0;
    padding: 0;
}
.prosmash-player-kit .heading-container h3 {
    color: #000;
    text-align: center;
    font-family: Lexend;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 38.4px */
    text-transform: uppercase;
}

