    },
    {
      "type": "text",
      "id": "margin_top_herotwo",
      "label": "Margin top (px)"
    },
    {
      "type": "text",
      "id": "margin_bottom_herotwo",
      "label": "Margin bottom (px)"
    }
  ],
  "blocks": [
    {
      "type": "list_item",
      "name": "List item",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Hero home 11",
    "category": "SectionHub: weare"
  }]
