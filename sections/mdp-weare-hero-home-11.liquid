{{"mdp-weare-hero-home-11.css" | asset_url | stylesheet_tag }}
<section style="margin-top: {{ section.settings.margin_top_herotwo }}px;
                margin-bottom: {{ section.settings.margin_bottom_herotwo }}px;" >
  <div class="{% if section.settings.boxed == true %}mdp-container{% else %}mdp-boxed{% endif %}">
    <div id="mdp-weare-{{ section.id }}"
         data-columns="1"
         data-gap="30"
         class="mdp mdp-weare-hero-home-11 lazyload  mdp-grid
              {% if section.settings.inverted_herotwo %}mdp-inverted{% endif %}
              {% if section.settings.backed_herotwo %}mdp-backed{% endif %}"
    >

      <div class="mdp-data mdp-data-hero-home-11"
           style="background-color: {{section.settings.background_image_herotwo}};
                   justify-content: {{section.settings.variant_herotwo}};
                   {% if section.settings.image_herotwo != blank %}
                   background-image: url('{{section.settings.image_herotwo | img_url : section.settings.image_size_herotwo}}');
                   {% endif %}
                   background-repeat: no-repeat;
                   background-size: {{ section.settings.background_size_herotwo }};
                   padding-top: {{ section.settings.padding_top_herotwo }}px;
                   padding-left: 90px;
                   padding-bottom: {{ section.settings.padding_bottom_herotwo }}px;">

        <div class="mdp-box-content">
          <div class="mdp-header">

            {% unless section.settings.subtitle_herotwo == blank %}
              <div class="mdp-subtitle">
                {{section.settings.subtitle_herotwo}}
              </div>
            {% endunless %}

            <h4 class="mdp-title-hero-home-11"
                style="{% if section.settings.use_local_styles == true %}color: {{section.settings.heading_color_herotwo}};{% endif %}
                        margin-left: {{section.settings.heading_margin_left_herotwo}}px;">
              {{section.settings.title_herotwo}}
            </h4>

          </div>

          {% unless section.settings.content_herotwo == blank %}
            <div class="mdp-hero-home-11-text" style="color: {{section.settings.text_color_herotwo}};">
              {{section.settings.content_herotwo}}
            </div>
          {% endunless %}

          {% for block in section.blocks %}
            Test: {% if block.type == 'list_item' %}  {% endif %}
          {% endfor %}

          {% for block in section.blocks %}

            {% if block.type == 'list_item' %}
              <div class="mdp-hero-home-11-text" style="color: {{section.settings.text_color_herotwo}};">
              <ul>
            {% endif %}

            {% case block.type %}
              {% when 'list_item' %}
                <li>
                  <span class="mdp-icon"> <i class="{{block.settings.icon_class}}"></i></span>
                  {% unless block.settings.content == blank %}
                    {{block.settings.content}}
                  {% endunless %}
                </li>
            {% endcase %}

            {% if block.type == 'list_item' %}
              </ul>
              </div>
            {% endif %}

          {% endfor %}

          <div class="mdp-footer">
            {% unless section.settings.link_herotwo == blank %}
              <a class="mdp-button"
                 {% if section.settings.use_local_styles == true %}
                 style="color: {{ section.settings.button_text_color }}"
                 {% endif %}
                 href="{{section.settings.link_herotwo}}">
                {{section.settings.button_string_herotwo}}
              </a>
            {% endunless %}
          </div>

          {% if section.settings.subscribe_herotwo == true %}
            <div class="mdp-signup-form">
              {% form "customer" %}
                {{ form.errors | default_errors }}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="mdp-row">
                  <input  type="email" placeholder="Subscribe by email" name="contact[email]"/>
                  <button type="submit" class="mdp-submit">Submit</button>
                </div>
              {% endform %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>


