.featured {
    padding: 60px 0;
}
.featured h3 {
    text-align: center;
    font-family: 'Lexend';
    font-size: 32px;
    color: black;
    font-weight: 700;
    line-height: 120%;
    margin: 0;
    padding: 0 0 40px;
}
.featured .featured-products {
    /* display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr; */
    display: flex;
    gap: 32px;
    flex-wrap: wrap;
}
.featured .featured-card {
    width: calc((100% / 4) - 32px);
}
.featured .card-img {
    width: 304px;
    height: 320px;
    background: red;
}
.featured .card-img img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    object-position: center;
}
.featured .featured-card a {
    text-decoration: none;
    display: inline-block;
}
.featured .featured-card h2,
.featured .featured-card p {
    padding: 0;
    margin: 0;
}
.featured .card-content {
    padding-top: 24px;
}
.featured .card-content .card-title {
    font-family: var(--font-lexend);
    color: var(--black);
    font-size: 20px;
    font-weight: 700;
    line-height: 120%;
}
.featured .card-content .card-price {
    font-family: var(--font-redhat);
    color: var(--text);
    font-size: 16px;
    font-weight: 600;
    line-height: 150%;
    padding-top: 8px;
}
.featured .cta-btn {
    text-align: center;
    margin-top: 50px;
}
.featured .cta-btn a {
    text-decoration: none;
    display: inline-block;
    padding: 17px 40px;
    background: #42662B;
    color: white;
    font-family: 'Lexend';
    font-size: 16px;
    font-weight: 700;
    line-height: 100%;
}

@media (max-width: 1024px) {
    .featured .featured-products {
        justify-content: center;
    }
    .featured .featured-card {
        width: calc((100% / 3) - 32px);
    }
}
@media (max-width: 767px) {
    .featured .featured-products {
        gap: 16px;
    }
    .featured .featured-card {
        width: calc((100% / 2) - 16px);
    }
    .featured .featured-card img {
        max-height: auto;
        height: 100%;
    }
}
@media (max-width: 480px) {
    .featured .featured-products {
        display: flex;
        justify-content: center;
        align-items: center;
    }
}