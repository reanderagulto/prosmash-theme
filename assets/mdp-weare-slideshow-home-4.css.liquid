/* START slideshow home 4 */
.mdp-weare-slideshow-home-4 .mdp-slide {
    position: relative;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-media {
    background-size: cover;
    background-position: center top;
    background-repeat: no-repeat;
    height: 1050px;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data {
    width: 100%;
    margin-top: 25px;
    text-align: center;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-header .mdp-title {
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: bold;
    font-size: {{ settings.mdp_header_font_size }}px;
    line-height: {{ settings.mdp_header_line_height }}em;
    text-align: center;
    letter-spacing: 0.4px;
    color: {{ settings.mdp_header_color }};
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-content {
    margin-top: 15px;
    font-size: 20px;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-content p:first-child {
    margin-top: 0;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-content p:last-child {
    margin-bottom: 0;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-content a {
    color: #2a2a2a;
    transition: 0.3s all ease-in-out;
    text-decoration: underline;
    display: inline;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-content a:hover {
    color: #5838e9;
    transform: scale(1.5);
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-footer .mdp-button {
    margin-top: 30px;
    font-family: var(--font-body-family);
    font-style: normal;
    border-radius: 0;
    background-image: none !important;
    cursor: pointer;
    width: auto;
    font-weight: bold;
    padding: 15px 45px;
    font-size: 14px;
    line-height: 19px;
    background-color: #343434;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    border-color: #4c90c7;
    color: white;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-footer .mdp-button:hover {
    background-color: white;
    color: #2a2a2a;
}
.mdp-weare-slideshow-home-4 .mdp-slide .mdp-data .mdp-footer .mdp-button::before {
    content: none;
}
.mdp-weare-slideshow-home-4 .mdp-slide.mdp-inverted .mdp-data .mdp-header .mdp-title {
    color: white;
}
.mdp-weare-slideshow-home-4 .mdp-slide.mdp-inverted .mdp-data .mdp-content {
    color: white;
}
.mdp-weare-slideshow-home-4 .mdp-slide.mdp-inverted .mdp-data .mdp-footer .mdp-button {
    padding: 9px 15px;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: 600;
    border-radius: 0;
    background-image: none !important;
    font-size: 14px;
    background-color: white;
    border-color: white;
    color: #2a2a2a;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-slideshow-home-4 .mdp-slide.mdp-inverted .mdp-data .mdp-footer .mdp-button:hover {
    background-color: #5838e9;
    border-color: #5838e9;
    color: white;
}
.mdp-weare-slideshow-home-4 .mdp-swiper-pagination {
    position: initial;
    margin-top: 10px;
}
.swiper-button-prev-slideshow-home-4:after,
.swiper-button-next-slideshow-home-4:after{
    color: white;
}

.swiper-button-prev-slideshow-home-4:hover:after,
.swiper-button-next-slideshow-home-4:hover:after{
    color: #E9384F;
}
/* END slideshow home 4 */

