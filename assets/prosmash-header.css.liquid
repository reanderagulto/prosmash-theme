.mdp-info,
.mdp-info a {
    font-size: 13px;
    font-family: 'Red Hat Display';
    font-weight: 400;
}
.bottom-header .select2-container--open .select2-selection__arrow {
  transform: rotate(180deg);
}
.top-header .mdp-weare-menu-1 .mdp-menu-element .mdp-menu-wrapper .mdp-menu-root>.mdp-menu-item:nth-child(2) a {
    padding-left: 0 !important;
}
.top-header .mdp-menu-link {
    font-size: 14px;
    text-transform: uppercase;
    color: black !important;
    line-height: 150% !important;
}
.top-header .mdp-weare-menu-1 .mdp-menu-element .mdp-menu-wrapper {
    min-height: auto !important;
}
.top-header .mdp-col {
    border-bottom: 1px solid black;
}
.mdp-topbar-discounts {
    color: var(--Primary-White, #FFF);
    text-align: center;
    font-family: "Red Hat Display";
    font-size: 13px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 19.5px */
    text-transform: uppercase;
}
.top-header .mdp-menu-item.mdp-has-children {
    display: none;
} 
.bottom-header {
    padding: 20px 0;
}
.bottom-header .mdp-search-display {
    position: relative;
    top: 0;
    left: 0;
}
.bottom-header.mdp-logo {
    max-width: 250px;
    height: 100%;
}
.bottom-header .mdp-logo img {
    width: 100%;
    object-fit: contain;
    min-width: 250px;
}
.bottom-header .mdp-col.mdp-row-full {
    gap: 100px;
}
.bottom-header .mdp-row-center {
    width: 100%;
}
.top-header .mdp-col.mdp-row-full {
    margin: 0 !important;
}
.bottom-header .mdp-row-center {
    display: flex;
    align-items: stretch;
}
.bottom-header .mdp-row-center .mdp-search-display {
    flex: 1;
}
.bottom-header .mdp-row-center {
    position: relative;
    font-family: var(--font-redhat);
    padding: 5px;
    border: 1px solid rgba(102,102,102,0.5);
    max-height: 48px;
    font-weight: 600;
    z-index: 10;
}

.bottom-header span.select2-dropdown.collection-dropdown-fullwidth.select2-dropdown--below {
    width: 100% !important;
    margin-top: 13px;
    padding: 24px;
    border: none;
    box-shadow: 0px 5px 15px 0px rgba(0,0,0,0.19);
}

.bottom-header span.select2.select2-container {
    width: 100% !important;
    height: 100%;
}
.bottom-header .select2-selection {
    height: 100% !important;
    display: flex !important;
    align-items: center;
}
.bottom-header .select2-container--default .select2-selection--single {
    border-radius: 0;
    background: white;
    padding: 12px;
    border: 0;
    position: relative;
}
.bottom-header .select2-container--default .select2-selection--single::before {
    transition: 0.3s;
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    right: 0;
    border: 1px solid #66666680;
    opacity: 0;
}
.bottom-header .select2-container--default .select2-selection--single[aria-expanded="true"]::before {
    opacity: 1;
}
.bottom-header .select2-container--default .select2-selection--single:hover::before {
    opacity: 1;
}
.bottom-header #select2-collection-dropdown-container {
    padding: 0 8px 0 0;
}
.bottom-header .select2-selection__placeholder {
    color: black !important;
}
.bottom-header .select2-container--default .select2-results__option--highlighted.select2-results__option--selectable {
    background: white;
    color: #607F4C;
    display: inline-block;
}
.bottom-header .select2-container--default .select2-results>.select2-results__options {
    max-height: unset;
}
.bottom-header .mdp-search-bar {
    align-items: stretch !important;
}
.bottom-header .mdp-search-bar input[type="search"] {
    border: none !important;
    outline: none;
    font-size: 16px;
    font-family: var(--font-redhat);
    text-align: left;
}
.bottom-header .mdp-search-bar input[type="search"]::placeholder {
    font-family: var(--font-redhat);
}
.bottom-header .select2-container--open {
    left: 0 !important;
    width: 100%;
}
.select2-container--default .select2-selection--single .select2-selection__arrow {
    position: relative;
    background-image: url('{{ 'caret.svg' | asset_url }}');
    background-repeat: no-repeat;
    background-position: center;
    background-size: 12px 12px;
    border: none;
    filter: invert(1);
}
.select2-container--default .select2-selection--single .select2-selection__arrow b {
    display: none;
}

.bottom-header .mdp-cart span {
    font-size: 12px;
    font-family: 'Red Hat Display';
    color: black;
    white-space: nowrap;
    padding-left: 8px;
    font-weight: 500;
}
.bottom-header .mdp-cart {
    display: flex;
    flex: 1;
    width: 100%;
    flex-wrap: nowrap;
}
.bottom-header .mdp-row-right i {
    color: #42662B;
}


@media (max-width: 1200px) {
    .bottom-header .mdp-row-center {
        position: relative !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        transform: translate(0, 0) !important;
        display: flex !important;
        width: 100% !important;
    }
    .bottom-header .mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-left, .mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-center, .mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-right, .mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-right a {
        display: flex !important;
    }
}
@media (max-width: 767px) {
    .bottom-header .mdp-row-center {
        visibility: hidden;
        position: absolute !important;
        z-index: -999999;
    }
    .top-header {
        display: none;
    }
    .bottom-header {
        padding: 0;
    }
}


.mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-center {
    position: relative;
}
.mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-center #all-categories-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px;
    transition: 0.3s;
    cursor: pointer;
    position: relative;
    margin: 0 12px 0 0;
}
.mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-center #all-categories-btn.active .caret-down {
    transform: rotate(180deg);
}
.mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-center #all-categories-btn::before {
    content: '';
    width: 100%;
    height: 100%;
    border: 1px solid rgba(102, 102, 102, 0.50);
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}
.mdp-weare-menu-1 .mdp-container .mdp-row-full .mdp-row-center #all-categories-btn:hover::before{
    opacity: 1;
}


.menu-drawer {
    position: absolute;
    top: 68px;
    left: 0;
    width: 100%;
    z-index: 9999;
    background: white;
    display: flex;
    justify-content: space-between;
    background: var(--Primary-White, #FFF);
    box-shadow: 0 5px 15px 0 rgba(0, 0, 0, 0.20);
    opacity: 0;
}
.menu-drawer.opened {
    opacity: 1;
}
.menu-drawer ul {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 24px;
}
.menu-drawer ul li {
    list-style: none;
    display: flex;
    align-items: center;
}
.menu-drawer ul li a {
    color: var(--Primary-Black, #000);
    font-family: "Red Hat Display";
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 150%; /* 30px */
    transition: 0.3s;
}

.menu-drawer ul li a:hover {
    color: #607f4c;
}
.menu-drawer .menu-drawer-img-container {
    max-width: 420px;
    width: 100%;
    height: 258px;
    padding: 24px;
}
.menu-drawer .menu-drawer-img-container canvas {
    width: 100% !important;
    height: 100%;
    border-radius: 0;
    background-size: cover;
    background-position: center;
}

