.mdp-weare-article-1 {
    margin-top: 35px;
}
.mdp-weare-article-1 .mdp-article {
    position: relative;
}
.mdp-weare-article-1 .mdp-article .mdp-media {
    margin-bottom: 30px;
}
.mdp-weare-article-1 .mdp-article .mdp-media .mdp-image {
    max-width: 100%;
    margin: auto;
}
.mdp-weare-article-1 .mdp-article .mdp-media .mdp-title {
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: bold;
    font-size: 48px;
    line-height: 62px;
    text-align: center;
    letter-spacing: 0.4px;
    color: {{ settings.mdp_header_color }};
}
.mdp-weare-article-1 .mdp-article .mdp-media .mdp-extra .mdp-date {
    text-align: center;
    margin-bottom: 26px;
}
.mdp-weare-article-1 .mdp-article .mdp-media .mdp-extra .mdp-date time {
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    color: #6D6D6D;
}
.mdp-weare-article-1 .mdp-article .mdp-data {
    margin-top: 20px;
    position: relative;
}
.mdp-weare-article-1 .mdp-article .mdp-data .mdp-header {
    margin-bottom: 40px;
}
.mdp-weare-article-1 .mdp-article .mdp-data .mdp-header .mdp-extra {
    text-transform: uppercase;
    font-size: 11px;
    display: inline-flex;
    align-items: center;
    margin: 0 -5px 15px -5px;
}
.mdp-weare-article-1 .mdp-article .mdp-data .mdp-header .mdp-extra > div {
    margin: 0 5px;
}
.mdp-weare-article-1 .mdp-article .mdp-data .mdp-header .mdp-title {
    font-size: 31.992px;
    margin-bottom: 15px;
}
.mdp-weare-article-1 .mdp-article .mdp-data .mdp-content {
    margin-bottom: 30px;
}

.mdp-weare-article-1 .mdp-article .mdp-data .mdp-content p{
    font-family: "{{ settings.weare_font_text }}";
    font-size: {{ settings.mdp_paragraph_font_size }}px;
    line-height: {{ settings.mdp_paragraph_line_height }}em;
    color: {{ settings.mdp_paragraph_color }};
}

.mdp-weare-article-1 .mdp-article .mdp-data .mdp-footer {
    margin-bottom: 50px;
}
.mdp-weare-article-1 div.mdp-title {
    color: #2a2a2a;
    font-size: 12.792px;
    text-transform: uppercase;
    margin-bottom: 20px;
}
.mdp-weare-article-1 .mdp-comments {
    padding: 30px;
    background: rgba(0, 0, 0, 0.04);
    margin-bottom: 50px;
}
.mdp-weare-article-1 .mdp-comments .mdp-comment {
    margin-bottom: 20px;
}
.mdp-weare-article-1 .mdp-comments .mdp-comment:last-child {
    margin-bottom: 0;
}
.mdp-weare-article-1 .mdp-comments .mdp-comment .mdp-comment-content p {
    margin-bottom: 10px;
}
.mdp-weare-article-1 .mdp-comments .mdp-comment .mdp-comment-meta {
    font-size: 12px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    margin: 0 -5px 0 -5px;
}
.mdp-weare-article-1 .mdp-comments .mdp-comment .mdp-comment-meta .mdp-comment-meta-item {
    margin: 0 5px;
}
.mdp-weare-article-1 .mdp-comment-form input,
.mdp-weare-article-1 .mdp-comment-form textarea,
.mdp-weare-article-1 .mdp-comment-form select {
    padding: 9px 15px;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: 600;
    border-radius: 0;
    background-image: none !important;
    background-color: white;
    font-size: 14px;
    width: 100%;
    box-sizing: border-box;
}
.mdp-weare-article-1 .mdp-comment-form button,
.mdp-weare-article-1 .mdp-comment-form input[type=submit] {
    border-radius: 0;
    background-image: none !important;
    cursor: pointer;
    width: auto;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: bold;
    padding: 15px 45px;
    font-size: 14px;
    line-height: 19px;
    background-color: #343434;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    border-color: #4c90c7;
    color: white;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-article-1 .mdp-comment-form button:hover,
.mdp-weare-article-1 .mdp-comment-form input[type=submit]:hover {
    background-color: white;
    color: #2a2a2a;
}
.mdp-weare-article-1 .mdp-comment-form button::before,
.mdp-weare-article-1 .mdp-comment-form input[type=submit]::before {
    content: none;
}
.mdp-weare-article-1 .mdp-comment-form textarea {
    height: 170px;
}
.mdp-weare-article-1 .mdp-comment-form input.mdp-input-error,
.mdp-weare-article-1 .mdp-comment-form textarea.mdp-input-error,
.mdp-weare-article-1 .mdp-comment-form select.mdp-input-error {
    border-color: red;
}
.mdp-weare-article-1 .mdp-comment-form .mdp-fields > * {
    margin-bottom: 20px;
}
.mdp-weare-article-1 .mdp-comment-form .mdp-row {
    display: flex;
    justify-content: space-between;
    flex-wrap: nowrap;
    margin-left: -10px;
    margin-right: -10px;
}
.mdp-weare-article-1 .mdp-comment-form .mdp-row > * {
    margin: 0 10px;
}
@media (max-width: 500px) {
    .mdp-weare-article-1 .mdp-comment-form .mdp-row {
        display: block;
        margin-left: 0;
        margin-right: 0;
    }
    .mdp-weare-article-1 .mdp-comment-form .mdp-row > * {
        margin: 0 0 20px 0;
    }
}

@media (min-width: 769px) and (max-width: 1024px) {
    .mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header .mdp-title,
    .mdp-weare-article-1 .mdp-article .mdp-media .mdp-title{
        font-size: 34px !important;
        line-height: 1.2em !important;
    }
}

@media (min-width: 426px) and (max-width: 768px) {
    .mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header .mdp-title,
    .mdp-weare-article-1 .mdp-article .mdp-media .mdp-title{
        font-size: 32px !important;
        line-height: 1.2em !important;
    }
}

@media (min-width: 376px) and (max-width: 425px) {
    .mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header .mdp-title,
    .mdp-weare-article-1 .mdp-article .mdp-media .mdp-title{
        font-size: 30px !important;
        line-height: 1.2em !important;
    }
}

@media (min-width: 321px) and (max-width: 375px) {
    .mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header .mdp-title,
    .mdp-weare-article-1 .mdp-article .mdp-media .mdp-title{
        font-size: 28px !important;
        line-height: 1.2em !important;
    }
}

@media (max-width: 320px) {
    .mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header .mdp-title,
    .mdp-weare-article-1 .mdp-article .mdp-media .mdp-title{
        font-size: 26px !important;
        line-height: 1.2em !important;
    }
}