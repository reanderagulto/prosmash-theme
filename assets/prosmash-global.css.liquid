@import url('https://fonts.googleapis.com/css2?family=Gabarito:wght@400..900&family=Lexend:wght@100..900&family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&display=swap');

:root {
    --black: #000000;
    --white: #FFFFFF;
    --text: #5B5B5B;
    --green: #42662B;
    --grey: #F0F0F0;
    --font-redhat: "Red Hat Display", sans-serif;
    --font-lexend: "Lexend", sans-serif;
    --font-gabarito: "Gabarito", sans-serif;

}

.custom-container {
    max-width: 1320px;
    width: 100%;
    margin: 0 auto;
}
h1 {
    font-size: 62px;
    color: var(--black);
    font-family: var(--font-lexend);
}
h2 {
    font-size: 48px;
}
h3 {
    font-size: 32px;
}
p {
    font-size: 16px;
    color: var(--text);
    font-family: var(--font-lexend);
}
.canvas_img {
  position: relative;
}
.canvas_img canvas {
    width: 100%;
    height: auto;
    display: block;
}
.canvas_img img {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
}




@media (max-width: 767px) {
    h1 {
        font-size: 50px;
    }
    h2 {
        font-size: 38px;
    }
    h3 {
        font-size: 30px;
    }
}


