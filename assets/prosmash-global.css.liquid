@import url('https://fonts.googleapis.com/css2?family=Gabarito:wght@400..900&family=Lexend:wght@100..900&family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&display=swap');

/* Regular */
@font-face {
  font-family: 'HelveticaCustom';
  src: url('{{ "Helvetica.ttf" | asset_url }}') format('truetype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

/* Bold */
@font-face {
  font-family: 'HelveticaCustom';
  src: url('{{ "Helvetica-Bold.ttf" | asset_url }}') format('truetype');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

/* Bold Oblique */
@font-face {
  font-family: 'HelveticaCustom';
  src: url('{{ "Helvetica-BoldOblique.ttf" | asset_url }}') format('truetype');
  font-weight: 700;
  font-style: italic;
  font-display: swap;
}

:root {
  --black: #000000;
  --white: #FFFFFF;
  --text: #5B5B5B;
  --green: #42662B;
  --grey: #F0F0F0;
  --toasted-caramel: #A87457;
  --font-body-family: 'HelveticaCustom', Arial, sans-serif;
  --font-lexend: "Lexend", sans-serif;
  --font-gabarito: "Gabarito", sans-serif;
}

body {
  font-family: var(--font-body-family);
}

.custom-container {
  max-width: 1320px;
  width: 100%;
  margin: 0 auto;
}
h1 {
  font-size: 62px;
  color: var(--black);
  font-family: var(--font-body-family);
}
h2 {
  font-size: 48px;
}
h3 {
  font-size: 32px;
}
p {
  font-size: 16px;
  color: var(--text);
  font-family: var(--font-body-family);
}
.canvas_img {
  position: relative;
}
.canvas_img canvas {
  width: 100%;
  height: auto;
  display: block;
}
.canvas_img img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
}

.cta-btn a,
.btn {
  all: unset;
  box-sizing: border-box;
  text-align: center;
  transition: all 0.3s ease;
  padding: 0 24px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16px;
  font-size: 16px;
  font-weight: 700;
  line-height: 100%;
  text-transform: uppercase;
  font-family: var(--font-body-family);
  text-decoration: none;
  cursor: pointer;
  width: max-content;
}

.btn i {
  font-size: inherit;
  font-weight: inherit;
  line-height: inherit;
}

.cta-btn a,
.btn.primary {
  background-color: var(--green);
  color: var(--white);
}

.btn.primary i,
.btn.black i {
  color: var(--white);
}

.btn.secondary {
  background-color: var(--white);
  color: var(--black);
}

.btn.bordered-black {
  border: 1px solid var(--black);
  background: transparent;
}

.btn.black {
  background: var(--black);
  color: var(--white);
}

.btn.black:hover {
  background-color: var(--toasted-caramel);
}

.btn.bordered-black:hover {
  background-color: var(--green);
  color: var(--white);
  border-color: var(--green);
}

.btn.bordered-black i, 
.btn.secondary i {
  color: var(--black);
}

.btn.primary:hover,
.cta-btn a:hover {
  background-color: var(--toasted-caramel); 
}

.btn.primary:hover i,
.btn.secondary:hover i,
.cta-btn a:hover i,
.btn.bordered-black:hover i {
  color: var(--white);
}

.btn.secondary:hover {
  background-color: var(--green);
  color: var(--white);
}

.hidden {
  display: none !important;
}


@media (max-width: 767px) {
  h1 {
    font-size: 50px;
  }
  h2 {
    font-size: 38px;
  }
  h3 {
    font-size: 30px;
  }

  .cta-btn a,
  .btn {
    height: 45px;
    font-size: 14px;
    padding: 0 16px;
  }
}