.collection-grid-item .main-img {
  max-width: 100%;
  /* max-height: 300px; */
  height: 300px;
  overflow: hidden;
  background: var(--white);
  margin-bottom: -30px;
}
.collection-grid-item .main-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  
}
.collection-grid-item .product-thumbnails {
  display: flex;
  justify-content: center;
  max-width: fit-content;
  width: 100%;
  margin: 0 auto;
  background: #F9F9F9;
  z-index: 2;
  position: relative;
  gap: 8px;
  padding: 8px;
}
.collection-grid-item .thumbnail-container {
  /* background: #F9F9F9;
  margin: 8px; */
  background: white;
  max-width: 48px;
  height: 48px;
  cursor: pointer;
}
.collection-grid-item .thumbnail-container img {
  width: 48px;
  height: 48px;
  object-fit: cover;
}

.collection-grid-item .gallery-container {
  margin-bottom: -30px;
}
.collection-grid-item .product-details {
  padding: 50px 20px 20px;
  
}
.collection-grid-item .prod-title {
  font-family: var(--font-lexend);
  font-size: 16px;
  font-weight: 600;
  line-height: 120%;
  color: var(--black);
}
.collection-grid-item {
  position: relative;
  border: 1px solid var(--white);
  transition: 0.3s;
  background: #F9F9F9;
  width: 298px;
}
.collection-grid-item:hover {
  border: 1px solid var(--green);
}

.collection-grid-item .prod-price {
  font-size: 24px;
  font-family: var(--font-lexend);
  line-height: 120%;
  font-weight: 700;
  padding: 4px 0 8px;
}
.collection-grid-item .short-description {
  font-family: var(--font-body-family);
  font-size: 14px;
  font-weight: 400;
  line-height: 150%;
  color: var(--text);
}
.collection-grid-item .infos {
  font-family: var(--font-body-family);
  font-size: 14px;
  font-weight: 400;
  line-height: 150%;
  display: flex;
  align-items: center;
  color: var(--text);
  gap: 15px;
}
.collection-grid-item .infos p {
  font-family: var(--font-body-family);
  padding: 0;
  margin: 0;
  font-size: 14px;
  font-weight: 400;
  line-height: 150%;
  color: var(--text);
}

.collection-grid-item .product-buttons {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 12px;
  margin-top:20px;
}
.collection-grid-item .product-buttons btn {
  display: inline-block;
  width: 100%;
}
.collection-grid-item .product-buttons a {
  text-decoration: none;
  text-align: center;
  padding: 16px 20px;
  background: transparent;
  font-family: var(--font-lexend);
  font-size: 16px;
  font-weight: 700;
  color: var(--black);
  line-height: 100%;
  text-transform: uppercase;
}
.collection-grid-item .product-buttons .add-cart-btn {
  font-size: 16px;
  font-family: var(--font-lexend);
  padding: 16px 20px;
  border-radius: 0;
  border: none;
  background: var(--green);
  color: white;
  text-transform: uppercase;
  width: auto;
  text-align: center;
  cursor: pointer;
}
.collection-grid-item .thumbnail-container.active {
  border-bottom: 2px solid var(--green);
}

.limited-edition {
  font-family: var(--font-lexend);
  font-size: 12px;
  font-weight: 700;
  line-height: 100%;
  color: var(--white);
  padding: 4px 8px;
  background: var(--black);
  position: absolute;
  top: 20px;
  left: 20px;
  
}
.view-btn {
  transition: 0.3s;
}
.view-btn:hover {
  background: #D9E0D5;
}
.product-buttons .add-cart-btn {
  transition: 0.3s;
}
.product-buttons .add-cart-btn:hover {
  background: #607F4C; 
}
button.btn.add-cart-btn:disabled {
  background: #2C421D;
}

.collection-banner {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  padding: 50px 0;
  position: relative;
}
.collection-banner .custom-container {
  max-width: 1312px;
  margin: 0 auto;
  width: 100%;
  padding: 47px 15px;
}

.collection-banner:before {
  
}

.collection-banner .collection-banner-title {
  color: var(--white);
  font-family: var(--font-body-family);
  font-size: 40px;
  font-weight: 700;
  line-height: 1.2;
  text-transform: uppercase;
}

.collection-banner .collection-banner-desc {
  color: var(--white);
  font-size: 16px;
  font-weight: 400;
  line-height: 1.5;
}

.collection-banner .collection-banner-desc > * {
  color: inherit; 
  font-size: inherit; 
  font-weight: inherit; 
  line-height: inherit;
}

@media (max-width: 1024px) {
  .collection-banner .collection-banner-title {
    font-size: 38px;
  }
}
@media (max-width: 767px) {
  .filter-section .custom-container {
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .collection-banner .collection-banner-title {
    font-size: 30px;
    text-align: center;
  }
}