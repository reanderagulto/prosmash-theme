.mdp-weare-text-block {
    border-bottom: 1px solid #DCDCDC;
}
.mdp-weare-text-block .mdp-weare-text-block-container {
    max-width: 900px;
    margin: 0 auto;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] {
    align-items: stretch;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item {
    padding-bottom: 90px;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header {
    margin-bottom: 20px;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-header .mdp-title {
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: 600;
    font-size: {{ settings.mdp_header_font_size }}px;
    line-height: {{ settings.mdp_header_line_height }}em;
    text-align: center;
    letter-spacing: 0.4px;
    color: {{ settings.mdp_header_color }};
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-content {
    margin-bottom: 40px;
    font-family: "{{ settings.weare_font_text }}";
    font-style: normal;
    font-weight: normal;
    font-size: {{ settings.mdp_paragraph_font_size }}px;
    line-height: {{ settings.mdp_paragraph_line_height }}em;
    letter-spacing: 0.4px;
    color: {{ settings.mdp_paragraph_color }};
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-footer .mdp-button {
    font-weight: 600;
    font-size: 15px;
    letter-spacing: 0.5px;
    display: inline-flex;
    white-space: nowrap;
    align-items: center;
    color: #2a2a2a;
    border-bottom: 1px solid transparent;
    position: relative;
    margin-top: 10px;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-footer .mdp-button .mdp-text {
    margin-right: 5px;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-footer .mdp-button .mdp-icon {
    font-size: 0;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-footer .mdp-button .mdp-icon svg {
    width: 20px;
    height: 20px;
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-footer .mdp-button::before {
    content: "";
    position: absolute;
    transition: 0.3s all ease-in-out;
    left: 0;
    right: 0;
    bottom: -4px;
    height: 0;
    border-bottom: 1px solid #2a2a2a;
    opacity: 0;
    transform: translateY(5px);
}
.mdp-weare-text-block .mdp-grid[data-columns][data-gap] .mdp-text-item .mdp-data .mdp-footer .mdp-button:hover::before {
    opacity: 1;
    transform: translateY(0);
}