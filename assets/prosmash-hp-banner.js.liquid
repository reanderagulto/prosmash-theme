 $(document).ready(function () {
    $('.bg-slider').slick({
        arrows: false,
        dots: true,
        infinite: true,
        speed: 500,
        fade: true,
        cssEase: 'linear',
        autoplay: false,
        autoplaySpeed: 3000
        
    });
})


$(document).ready(function () {
  $(function () {
  var $slider  = $('.bg-slider');
  var $banner  = $('.hp-banner');

  function updateBannerTheme(_, slick, current) {
    var i = (typeof current === 'number') ? current : (slick ? slick.currentSlide : 0);
    var $currentSlide = slick ? $(slick.$slides[i]) : $slider.find('.slick-current');

    // Toggle the theme class on the banner
    $banner.toggleClass('theme-white', $currentSlide.hasClass('white'));
  }

  // Run on init + afterChange
  $slider.on('init reInit afterChange', updateBannerTheme);

  // If already initialized (in case this code runs late)
  if ($slider.hasClass('slick-initialized')) {
    var slick = $slider.slick('getSlick');
    updateBannerTheme(null, slick, slick.currentSlide);
  }
});

});
