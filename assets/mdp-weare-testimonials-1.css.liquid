.mdp-weare-testimonials-1 {
    margin-top: 50px;
    margin-bottom: 100px;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-title {
    font-family: {{ settings.weare_font_header }};
    font-style: normal;
    font-weight: bold;
    font-size: 38px;
    line-height: 39px;
    color: #343434;
    text-align: center;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-subtitle {
    margin-bottom: 5px;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 22px;
    letter-spacing: 0.133333px;
    text-transform: uppercase;
    color: #343434;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-button {
    font-size: 15px;
    letter-spacing: 0.5px;
    display: inline-flex;
    white-space: nowrap;
    align-items: center;
    color: #2a2a2a;
    border-bottom: 1px solid transparent;
    position: relative;
    font-weight: normal;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-button .mdp-text {
    margin-right: 5px;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-button .mdp-icon {
    font-size: 0;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-button .mdp-icon svg {
    width: 20px;
    height: 20px;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-button::before {
    content: "";
    position: absolute;
    transition: 0.3s all ease-in-out;
    left: 0;
    right: 0;
    bottom: -4px;
    height: 0;
    border-bottom: 1px solid #2a2a2a;
    opacity: 0;
    transform: translateY(5px);
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-button:hover::before {
    opacity: 1;
    transform: translateY(0);
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-row-full {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}
.mdp-weare-testimonials-1 > .mdp-header .mdp-row-full .mdp-row-left {
    margin-right: 30px;
}
@media (max-width: 600px) {
    .mdp-weare-testimonials-1 > .mdp-header .mdp-row-full {
        display: block;
    }
    .mdp-weare-testimonials-1 > .mdp-header .mdp-row-full .mdp-row-left {
        justify-content: center;
        padding: 10px 10px 5px 10px;
        margin-right: 0;
    }
    .mdp-weare-testimonials-1 > .mdp-header .mdp-row-full .mdp-row-right {
        justify-content: center;
        padding: 5px 10px 10px 10px;
    }
}
.mdp-weare-testimonials-1 > .mdp-header {
    margin-bottom: 30px;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-testimonial {
    position: relative;
    background-color: rgba(0, 0, 0, 0.04);
    padding: 30px;
    margin-bottom: 20px;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-testimonial p {
    margin: 0;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-testimonial > .mdp-icon {
    position: absolute;
    right: 10px;
    bottom: 10px;
    opacity: 0.05;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-testimonial > .mdp-icon svg {
    width: 50px;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-testimonial .mdp-rating {
    display: flex;
    align-items: center;
    color: #5838e9;
    margin-left: -5px;
    margin-top: 10px;
    margin-bottom: -5px;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-testimonial .mdp-rating .mdp-icon svg {
    height: 20px;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-author {
    display: flex;
    align-items: center;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-author .mdp-image {
    border-radius: 100%;
    margin-right: 15px;
    flex-shrink: 0;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-author .mdp-data .mdp-name {
    font-weight: bold;
    font-size: 15px;
}
.mdp-weare-testimonials-1 .mdp-grid .mdp-item .mdp-author .mdp-data .mdp-title {
    text-transform: uppercase;
    font-size: 11px;
    margin-top: 5px;
}