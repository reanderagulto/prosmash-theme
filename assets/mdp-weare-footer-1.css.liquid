    margin-bottom: 10px;
}
.mdp-weare-footer-1 .mdp-footer {
    display: flex;
    flex-wrap: wrap;
}

.mdp-weare-footer-1 .mdp-footer .mdp-footer-text{
    width: calc(30% - 30px);
    margin-right: 30px;
}
.mdp-weare-footer-1 .mdp-footer .mdp-footer-menu{
