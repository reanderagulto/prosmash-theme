.mdp-weare-footer-1 .mdp-footer .mdp-item .mdp-title {
    margin-bottom: 15px;
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: {{ settings.mdp_header_line_height }}em;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: {{ settings.mdp_header_color }};
}
.mdp-weare-footer-1 .mdp-footer .mdp-item .mdp-text {
    font-family: "{{ settings.weare_font_text }}";
    font-style: normal;
    font-weight: normal;
    font-size: {{ settings.mdp_paragraph_font_size }}px;
    line-height: {{ settings.mdp_paragraph_line_height }}em;
    letter-spacing: 0.4px;
    color: {{ settings.mdp_paragraph_color }};
}
.mdp-weare-footer-1 .mdp-footer .mdp-item .mdp-text p {
    margin: 0;
}
.mdp-weare-footer-1 .mdp-footer .mdp-item select {
    padding: 9px 15px;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 600;
    border-radius: 0;
    background-image: none !important;
    background-color: white;
    font-size: 14px;
}
.mdp-weare-footer-1 .mdp-footer .mdp-footer-text .mdp-menu a,
.mdp-weare-footer-1 .mdp-footer .mdp-footer-menu .mdp-menu a,
