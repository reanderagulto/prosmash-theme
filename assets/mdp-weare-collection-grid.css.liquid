.mdp-weare-collection-grid {
    margin-top: 50px;
    margin-bottom: 100px;
}
.mdp-weare-collection-grid > .mdp-header {
    margin-bottom: 40px;
}
.mdp-weare-collection-grid .mdp-box-btn {
    margin-top: 30px;
    text-align: center;
}
.mdp-weare-collection-grid .mdp-box-btn a {
    display: inline-block;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: 700;
    font-size: 14px;
    line-height: 19px;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: {{ settings.btn_color }};
    padding: 15px 75px;
    border: 1px solid {{ settings.btn_color }};
    box-sizing: border-box;
    border-radius: 2px;
}

.mdp-weare-collection-grid .mdp-box-btn a:hover {
    background-color: {{ settings.btn_hover_background }};
    border: 1px solid {{ settings.btn_hover_background }};
    color: {{ settings.btn_hover_color }};
}

.mdp-weare-collection-grid > .mdp-header .mdp-title{
    font-family: "{{ settings.weare_font_header }}";
    font-style: normal;
    font-weight: bold;
    font-size: {{ settings.mdp_header_font_size }}px;
    line-height: {{ settings.mdp_header_line_height }}em;
    color: {{ settings.mdp_header_color }};
    text-align: center;
}
.mdp-weare-collection-grid > .mdp-header .mdp-subtitle{
    margin-bottom: 5px;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 22px;
    letter-spacing: 0.133333px;
    text-transform: uppercase;
    color: #343434;
}
.mdp-weare-collection-grid > .mdp-header .mdp-button{
    font-size: 15px;
    letter-spacing: 0.5px;
    display: inline-flex;
    white-space: nowrap;
    align-items: center;
    color: #2a2a2a;
    border-bottom: 1px solid transparent;
    position: relative;
    font-weight: normal;
}
.mdp-weare-collection-grid > .mdp-header .mdp-button .mdp-text{
    margin-right: 5px;
}
.mdp-weare-collection-grid > .mdp-header .mdp-button .mdp-icon{
    font-size: 0;
}
.mdp-weare-collection-grid > .mdp-header .mdp-button .mdp-icon svg{
    width: 20px;
    height: 20px;
}
.mdp-weare-collection-grid > .mdp-header .mdp-button::before{
    content: "";
    position: absolute;
    transition: 0.3s all ease-in-out;
    left: 0;
    right: 0;
    bottom: -4px;
    height: 0;
    border-bottom: 1px solid #2a2a2a;
    opacity: 0;
    transform: translateY(5px);
}
.mdp-weare-collection-grid > .mdp-header .mdp-button:hover::before{
    opacity: 1;
    transform: translateY(0);
}
.mdp-weare-collection-grid > .mdp-header .mdp-row-full{
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}
.mdp-weare-collection-grid > .mdp-header .mdp-row-full .mdp-row-left{
    margin-right: 30px;
}

.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card .mdp-data .mdp-header{
    margin-bottom: 15px;
}

.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card .mdp-data .mdp-footer{
    position: initial;
}

.mdp-weare-product-card .mdp-data .mdp-footer .mdp-add-to-wishlist,
.mdp-weare-product-card .mdp-data .mdp-footer .mdp-add-to-cart,
.mdp-weare-product-card .mdp-data .mdp-footer .mdp-select-options{
    transform: initial;
}

.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card,
.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card .mdp-media,
.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card .mdp-media a,
.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card .mdp-media a .mdp-box-product{
    height: 100%;
}
.mdp-weare-collection-grid .mdp-grid .mdp-weare-product-card .mdp-media a .mdp-box-product .mdp-img-product{
    width: 100%;
    object-fit: fill;
}

