.mdp-weare-list-collection-home-7 {
    margin-top: 40px;
    margin-bottom: 40px;
}

.mdp-weare-list-collection-home-7 .mdp-container .mdp-grid .mdp-list-collection-item {
    text-align: center;
}

.mdp-weare-list-collection-home-7 .mdp-container .mdp-grid .mdp-list-collection-item .mdp-data{
    display: flex;
    align-items: center;
    justify-content: center;
}

.mdp-weare-list-collection-home-7 .mdp-container .mdp-grid .mdp-list-collection-item .mdp-data a.mdp-btn-link {
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 700;
    font-size: 16px;
    line-height: 1.2em;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: {{ settings.link_color }};
    transition: 0.3s;
}

.mdp-weare-list-collection-home-7 .mdp-container .mdp-grid .mdp-list-collection-item .mdp-data a.mdp-btn-link:hover {
    color: {{ settings.link_hover_color }};
}