.prod-details-table > div {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid var(--green);
}
.prod-details-table > div:nth-child(10) {
    border-bottom: 0;
}
.prod-details-table > div:last-child {
    border-bottom: 0;
}
.prod-details-table > div .table-title {
    color: #5B5B5B;
    font-family: "Red Hat Display";
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.prod-details-table > div .table-value,
.prod-details-table > div .table-value a {
    color: var(--Primary-Black, #000);
    font-family: "Red Hat Display";
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}


.accordion-caret.rotated {
  transform: rotate(180deg);
}

@media (max-width: 767px) {
    .mdp-title a {
        font-size: 30px;
    }
}