.mdp-title a {
    font-family: var(--font-lexend);
    font-weight: 800;
    font-size: 40px;
    line-height: 130%;
    text-transform: uppercase;
    color: var(--black);
    text-align: left;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-price-wrapper .mdp-price-varies {
    font-family: var(--font-lexend);
    font-weight: 600;
    font-size: 24px;
    line-height: 100%;
    color: var(--black);
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-price-wrapper {
    margin: 0;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-content {
    margin: 0;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-content p {
    font-family: var(--font-redhat);
    padding: 12px 0 0;
    margin: 0;
}
/* SWATCHES */
.swatch-option-label {
    font-family: var(--font-lexend);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    color: var(--black);
}
.mdp-product-swatches {
    margin-top: 40px;
    
}
.mdp-option-swatches {
    display: flex;
    gap: 10px;
    margin-top: 16px;
}


.mdp-product-swatches .mdp-option .swatch-label {
    font-family: var(--font-lexend);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    cursor: pointer;
    display: inline-block;
}
.mdp-product-swatches .mdp-option .mdp-option-swatches span {
    display: inline-block;
    width: 40px;
    height: 40px;
}
.mdp-product-swatches .mdp-option .mdp-option-swatches input[type="radio"] {
    display: none;
}
