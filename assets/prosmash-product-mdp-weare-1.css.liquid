.mdp-title a {
    font-family: var(--font-lexend);
    font-weight: 800;
    font-size: 40px;
    line-height: 130%;
    text-transform: uppercase;
    color: var(--black);
    text-align: left;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-price-wrapper .mdp-price-varies {
    font-family: var(--font-lexend);
    font-weight: 600;
    font-size: 24px;
    line-height: 100%;
    color: var(--black);
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-price-wrapper {
    margin: 0;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-content {
    margin: 0;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-content p {
    font-family: var(--font-redhat);
    padding: 12px 0 0;
    margin: 0;
}
/* SWATCHES */
.swatch-option-label {
    font-family: var(--font-lexend);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    color: var(--black);
}
.mdp-product-swatches {
    margin-top: 40px;
    
}
.mdp-option-swatches {
    display: flex;
    gap: 10px;
    margin-top: 16px;
}


.mdp-product-swatches .mdp-option .swatch-label {
    font-family: var(--font-lexend);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    cursor: pointer;
    display: inline-block;
}
.mdp-product-swatches .mdp-option .mdp-option-swatches span {
    display: inline-block;
    width: 40px;
    height: 40px;
}
.mdp-product-swatches .mdp-option .mdp-option-swatches input[type="radio"] {
    display: none;
}


/* THREE COLUMN OPTION */
.prosmash-three-col-option {
    display: flex;
    gap: 56px;
    margin-top: 40px;
}
.prosmash-three-col-option .mdp-col label {
    font-family: var(--font-lexend);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    color: var(--black);
    margin-bottom: 16px;
}
.prosmash-three-col-option .mdp-col > div {
    font-family: var(--font-redhat);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    color: var(--text);
}
.prosmash-three-col-option .mdp-quantity-wrapper {
    display: flex;
    justify-content: space-between;
    text-align: center;
    max-width: 150px;
}
.prosmash-three-col-option .mdp-quantity-wrapper input {
    font-size: 24px;
    font-family: var(--font-redhat);
    font-weight: 500;
    line-height: 100%;
    color: var(--text);
    width: 100%;
    outline: none;
}
.prosmash-three-col-option .mdp-quantity-wrapper .fa-solid {
    font-size: 24px;
    color: #42662B;
    display: inline-block;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}


.prosmash-two-col-buttons {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    align-self: stretch;
    flex-wrap: wrap;
}

.prosmash-two-col-buttons {
    margin-top: 40px;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-add-to-cart {
    background: var(--white);
    font-size: 20px;
    font-family: var(--font-lexend);
    line-height: 100%;
    text-transform: uppercase;
    padding: 20px 50px;
    border-radius: 0;
    width: auto;
    flex: 1;
    color: var(--black);
    border: 2px solid var(--black);
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-add-to-cart i {
    margin-left: 16px;
}


.prosmash-two-col-buttons .mdp-add-to-wishlist {
    display: flex;
    align-items: center;
    flex: 1;
    justify-content: center;
    padding: 20px 40px;
    transition: 0.3s;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist:hover {
    background: #607F4C;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist svg,
.prosmash-two-col-buttons .mdp-add-to-wishlist .mdp-text-wishlist {
    transition: 0.3s;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist:hover svg path {
    fill: white;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist:hover .mdp-text-wishlist {
    color: var(--white);
}

.prosmash-two-col-buttons .mdp-text-wishlist {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    flex: 1 0 0;
    color: var(--black);
    font-family: var(--font-lexend);
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 100%; /* 20px */
    text-transform: uppercase;
    cursor: pointer;
}

.prosmash-two-col-buttons .mdp-add-to-cart:hover {
    background-color: #607F4C !important;
    color: var(--white) !important;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist.mdp-added svg path {
    fill: #42662B !important;
}

.delivery-notice {
    margin-top: 40px;
}
.delivery-notice .content p {
    margin: 0;
    padding: 0;
    font-family: var(--font-redhat);
    color: var(--text);
    font-size: 16px;
    line-height: 100%;
    font-weight: 500;
}
.delivery-notice .content strong {
    color: var(--black);
    font-family: var(--font-lexend);
    font-weight: 500;
    padding-bottom: 16px;
    line-height: 100%;
    display: inline-block;
}

/* SOCIAL SHARE */
.prosmash-mdp-weare-social-sharing span {
    font-family: var(--font-lexend);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    color: var(--black);
    display: block;
    margin-bottom: 8px;
}
.prosmash-mdp-weare-social-sharing a {
    display: inline-block;
    padding: 10px;
}


/* SOLD OUT */
.mdp-sold-out {
    color: var(--Primary-White, #FFF);
    text-align: center;
    font-family: Lexend !important;
    font-size: 14px;
    font-style: normal;
    font-weight: 500 !important;
    line-height: normal;
    text-transform: uppercase;
    display: inline-flex;
    padding: 5px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 40px;
    background: #819972 !important;
    width: auto !important;
    width: 96px;
}

/* ACCORDION DELIVERY NOTICE */
.delivery-notice .accordion-item {
    margin-top: 40px;
}
.delivery-notice .accordion-item .accordion-title {
    color: var(--Primary-Black, #000);
    font-family: Lexend;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    padding-bottom: 16px;
    cursor: pointer;
}
.delivery-notice .accordion-item .accordion-content {
    color: #5B5B5B;
    font-family: "Red Hat Display";
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.delivery-notice .accordion-title {
    display: flex;
    justify-content: space-between;
}
.accordion-caret {
  width: 24px;
  height: 24px;
  transition: transform 0.5s;
}

.prod-details-table > div {
    display: flex;
    justify-content: space-between;
}
.prod-details-table {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: repeat(10, auto);
  gap: 12px;
  column-gap: 56px;
  grid-auto-flow: column;
  padding: 12px 24px 12px;
  border: 1px solid var(--Secondary-1-Dark-Moss-Green, #42662B);
}
