.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-product-options {
    visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -9999999;
}

.mdp-data.prosmash-custom-data {
    max-width: 595px;
}
.prosmash-prod-grid {
    justify-content: space-between;
}
.mdp-swiper-slide {
    transition: 0.3s;
}
.mdp-swiper-slide::before {
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: -3px;
    left: 0;
    border-bottom: 2px solid #42662B !important;
    transition: 0.5s;
    opacity: 0;
}
.swiper-slide-thumb-active::before {
    opacity: 1;
}

.mdp-data .brand-name {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
}
.mdp-title a {
    font-family: var(--font-body-family);
    font-weight: 900;
    font-size: 40px;
    line-height: 130%;
    text-transform: uppercase;
    color: var(--black);
    text-align: left;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-price-wrapper .mdp-price-varies {
    font-family: var(--font-body-family);
    font-weight: 800;
    font-size: 24px;
    line-height: 100%;
    color: var(--black);
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-price-wrapper {
    margin: 0;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-content {
    margin: 0;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-content p {
    font-family: var(--font-body-family);
    padding: 12px 0 0;
    margin: 0;
}
/* SWATCHES */
.swatch-option-label {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
}
.mdp-product-swatches {
    margin: 40px 24px 0 0;
    gap: 24px;
    display: inline-block;

}
.mdp-option-swatches {
    display: flex;
    gap: 10px;
}
.swatch-option-label {
    margin-bottom: 16px;
}


.mdp-product-swatches .mdp-option .swatch-label {
    font-family: var(--font-body-family);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    cursor: pointer;
    display: inline-block;
}
.mdp-product-swatches .mdp-option .mdp-option-swatches span {
    display: inline-block;
    width: 22px;
    height: 22px;
}
.mdp-prod-reviews .stars img {
    width: 22px;
    height: 22px;
}
.mdp-prod-reviews .prod-rating div {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}
.mdp-product-swatches .mdp-option .mdp-option-swatches input[type="radio"] {
    display: none;
}
/* RATINGS */
.static-product-review {
    display: inline-block;
    margin: 40px 0px 0;
}
.static-product-review-title {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    padding-bottom: 16px;
} 
.static-product-review .stars-container {
    display: flex;
    gap: 16px;
}
.static-product-review .stars-container .stars {
    display: flex;
    align-items: center;
    gap: 6px;
}
.static-product-review .stars-container .stars img {
    width: 22px;
    height: 22px;
}
.static-product-review .stars-container a {
    display: flex;
    gap: 4px;
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
}


/* PRODUCT ADVANTAGE */
.accordion-item .pa-item {
    display: flex;
    align-items: center;
    gap: 15px;
}

/* THREE COLUMN OPTION */
.prosmash-three-col-option {
    display: flex;
    gap: 56px;
    margin-top: 40px;
}
.prosmash-three-col-option .mdp-col label {
    font-family: var(--font-body-family);
    font-weight: 600;
    font-size: 16px;
    line-height: 100%;
    color: var(--black);
    margin-bottom: 16px;
}
.prosmash-three-col-option .mdp-col > div {
    font-family: var(--font-body-family);
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    color: var(--text);
}
.prosmash-three-col-option .mdp-quantity-wrapper {
    display: flex;
    justify-content: space-between;
    text-align: center;
    max-width: 150px;
}
.prosmash-three-col-option .mdp-quantity-wrapper input {
    font-size: 24px;
    font-family: var(--font-body-family);
    font-weight: 500;
    line-height: 100%;
    color: var(--text);
    width: 100%;
    outline: none;
}
.prosmash-three-col-option .mdp-quantity-wrapper .fa-solid {
    font-size: 24px;
    color: #42662B;
    display: inline-block;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
}


.prosmash-two-col-buttons {
    display: flex;
    align-items: flex-start;
    gap: 24px;
    align-self: stretch;
    flex-wrap: wrap;
}

.prosmash-two-col-buttons {
    margin-top: 40px;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-add-to-cart {
    background: var(--white);
    font-size: 20px;
    font-family: var(--font-body-family);
    line-height: 100%;
    text-transform: uppercase;
    /* padding: 20px 50px; */
    border-radius: 0;
    /* width: auto;
    flex: 1; */
     max-width: 283px;
    width: 100%;
    height: 60px;
    white-space: nowrap;
    padding: 0;
    color: var(--black);
    border: 2px solid var(--black);
    font-weight: 800;
}
.mdp-weare-single-product>.mdp-product>.mdp-data .mdp-add-to-cart i {
    margin-left: 16px;
}


.prosmash-two-col-buttons .mdp-add-to-wishlist {
    display: flex;
    align-items: center;
    /* flex: 1; */
    justify-content: center;
    /* padding: 20px 40px; */
    transition: 0.3s;
    max-width: 283px;
    width: 100%;
    height: 60px;
    white-space: nowrap;
    cursor: pointer;
    gap: 16px;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist i {
    font-size: 20px;
}

.prosmash-two-col-buttons .mdp-add-to-wishlist:hover {
    background: #607F4C;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist i,
.prosmash-two-col-buttons .mdp-add-to-wishlist .mdp-text-wishlist {
    transition: 0.5s;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist:hover i {
    color: white;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist:hover .mdp-text-wishlist {
    color: var(--white);
}

.prosmash-two-col-buttons .mdp-text-wishlist {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);
    font-size: 20px;
    font-style: normal;
    font-weight: 800;
    line-height: 100%; /* 20px */
    text-transform: uppercase;
}

.prosmash-two-col-buttons .mdp-add-to-cart:hover {
    background-color: #607F4C !important;
    color: var(--white) !important;
    border-color: #607f4c !important;
}
.prosmash-two-col-buttons .mdp-add-to-wishlist.mdp-added svg path {
    fill: #42662B !important;
}
.mdp-add-to-wishlist.mdp-added i {
    color: red;
}

.delivery-notice {
    margin-top: 40px;
}
.delivery-notice .content p {
    margin: 0;
    padding: 0;
    font-family: var(--font-body-family);
    color: var(--text);
    font-size: 16px;
    line-height: 100%;
    font-weight: 500;
}
.delivery-notice .content strong {
    color: var(--black);
    font-family: var(--font-body-family);
    font-weight: 500;
    padding-bottom: 16px;
    line-height: 100%;
    display: inline-block;
}

/* SOCIAL SHARE */
.prosmash-mdp-weare-social-sharing {
    margin: 24px 0 0 60px;
}
.prosmash-mdp-weare-social-sharing span {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    display: block;
}
.prosmash-mdp-weare-social-sharing a {
    display: inline-block;
    padding: 10px;
}
/* TRUSTPILOT */
.trustpilot-box {
    /* margin-top: 39px; */
    margin: 39px 0 0 60px;
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
}
.trustpilot-box .trust-pilot-title {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
}


/* SOLD OUT AND PRE-ORDER*/
.mdp-sold-out,
.mdp-preorder {
    color: var(--Primary-White, #FFF);
    text-align: center;
    font-family: var(--font-body-family) !important;
    font-size: 14px;
    font-style: normal;
    font-weight: 500 !important;
    line-height: normal;
    text-transform: uppercase;
    display: inline-flex;
    padding: 5px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 40px;
    background: #819972 !important;
    width: auto !important;
    width: 96px;
    position: absolute;
    top: 24px;
    z-index: 1;
    right: 19px;
}

/* ACCORDION DELIVERY NOTICE */
.delivery-notice .accordion-item {
    margin-top: 40px;
}
.delivery-notice .accordion-item .accordion-title {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    padding-bottom: 16px;
    cursor: pointer;
    font-weight: 700;
}
.delivery-notice .accordion-item .accordion-content {
    color: #5B5B5B;
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.delivery-notice .accordion-title {
    display: flex;
    justify-content: space-between;
}
.accordion-caret {
  width: 24px;
  height: 24px;
  transition: transform 0.5s;
}
.delivery-notice .accordion-content,
.delivery-notice .accordion-content p {
    color: #5B5B5B;
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    margin: 0;
}

.prod-details-table > div {
    display: flex;
    justify-content: space-between;
}
.prod-details-table {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: repeat(10, auto);
  gap: 12px;
  column-gap: 56px;
  grid-auto-flow: column;
  padding: 12px 24px 12px;
  border: 1px solid var(--Secondary-1-Dark-Moss-Green, #42662B);
}
.prod-details-table > div {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid var(--green);
}
.prod-details-table > div:nth-child(10) {
    border-bottom: 0;
}
.prod-details-table > div:last-child {
    border-bottom: 0;
}
.prod-details-table > div .table-title {
    color: #5B5B5B;
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.prod-details-table > div .table-value,
.prod-details-table > div .table-value a {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.prod-details-table > div .table-value {
    display: flex;
    gap: 10px;
}


.accordion-caret.rotated {
  transform: rotate(180deg);
}
.product-short-description {
    padding-top: 12px;
}

.product-advantages {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
    align-self: stretch;
}
.product-advantages .pa-item {
    display: flex;
    align-items: center;
    gap: 8px;
    align-self: stretch;
}
.product-advantages .pa-item .pa-title {
    color: var(--Primary-Black, #000);
    font-family: var(--font-body-family);;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
.product-advantages .pa-item .pa-desc {
    color: #5B5B5B;
    font-family: var(--font-body-family);;
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
}
@media (max-width: 1024px) {
    .prod-details-table {
        grid-template-columns: 1fr;
        grid-auto-flow: row;
    }
    .prod-details-table>div {
        flex-wrap: wrap;
    }
    .mdp-data.prosmash-custom-data {
        max-width: 100%;    
    }
}

@media (max-width: 767px) {
    .mdp-title a {
        font-size: 30px;
    }
    .prosmash-three-col-option {
        flex-wrap: wrap;
        gap: 25px;    
    }
    .mdp-weare-single-product>.mdp-product>.mdp-data .mdp-buttons {
        flex-wrap: wrap;
    }
    /* .mdp-weare-single-product>.mdp-product>.mdp-data .mdp-add-to-cart,
    .prosmash-two-col-buttons .mdp-add-to-wishlist {
        max-width: 100%;
    } */
}
@media (max-width: 480px) {
    .mdp-weare-single-product>.mdp-product>.mdp-data .mdp-buttons .mdp-add-to-cart.mdp-preorder-button,
    .mdp-weare-single-product>.mdp-product>.mdp-data .mdp-buttons .mdp-add-to-wishlist {
        max-width: 100%;
        width: 100%;
        margin: 0;
     }
}