.cta-section {
    padding: 120px 0;
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-position: center !important;
}
.cta-section .cta-title {
    font-family: var(--font-lexend);
    font-size: 62px;
    font-weight: 900;
    line-height: 120%;
    color: var(--black);
    padding-bottom: 16px;
}
.cta-section .cta-desc {
    font-family: var(--font-redhat);
    font-size: 24px;
    font-weight: 500;
    line-height: 120%;
}
.cta-section .cta-desc span {
    color: var(--green);
    font-weight: 900;
}
@media (max-width: 767px) {
    .cta-section .cta-title {
        font-size: 52px;
        text-align: center;
    }
    .cta-section .cta-desc {
        text-align: center;
    }
    .cta-section {
        padding: 60px 0;
    }
}