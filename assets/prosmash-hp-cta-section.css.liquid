.cta-section {
    background-size: cover !important;
    background-repeat: no-repeat !important;
    background-position: center !important;
  }

  .cta-section {
    padding: 120px 0;
    background: black;
}
.cta-section h2 {
    color: white;
    padding: 0;
    margin: 0;
    font-family: 'Lexend';
    font-size: 62px;
    line-height: 120%;
    font-weight: 800;
}
.cta-section p {
    font-family: 'Red Hat Display';
    font-size: 24px;
    font-weight: 600;
    line-height: 120%;
    color: white;
    margin: 0;
    padding: 16px 0 0;
}
@media (max-width: 767px) {
    .cta-section h2 {
        font-size: 52px;
        text-align: center;
    }
    .cta-section p {
        text-align: center;
    }
    .cta-section {
        padding: 60px 0;
    }
}