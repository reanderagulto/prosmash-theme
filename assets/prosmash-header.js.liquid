;
(function ($, w, d, h, b) {

  var app = {
    categoryDrawer: function () {
        var $canvas = $("#category-canvas");
        var $firstLink = $(".toggle-link").first();
        
        var firstImg = $firstLink.data("image");
        if (firstImg) {
          $canvas.css("background-image", "url(" + firstImg + ")");
        }

        $(".toggle-link").hover(function() {
          var imgUrl = $(this).data("image");
          if (imgUrl) {
            $canvas.css("background-image", "url(" + imgUrl + ")");
          }
        });

        $('.menu-drawer').removeClass('opened');
        $('#all-categories-btn').removeClass('active');

        $('#all-categories-btn').on('click', function() {
          $(this).toggleClass('active');
          $('.menu-drawer').toggleClass('opened');
        })
    },

    others: function () {
      /** Put your uncategorized functions/scripts here */
    },

    init: function () {
      this.categoryDrawer();
    }
  };

  $(d).ready(function () {
    app.init();
  });

})(jQuery, window, document, 'html', 'body');

