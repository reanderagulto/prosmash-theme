  .prosmash-icon-list .icon-list-container {
    flex-wrap: wrap;
  }
  .prosmash-icon-list .icon-list-container .icon-item {
    width: calc((100% / 2) - 50px);
  }
  .categories-grid {
    flex-wrap: wrap;
  }
  .new-products .mdp-container {
    flex-direction: column;
    gap: 25px;
  }
  .new-products .mdp-container .col-left,
  .new-products .mdp-container .col-right {
    width: 100%;
  }
  .new-products .mdp-container .col-left .heading-container {
    align-items: center;
  }
  .new-products .col-right .product-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  
}
