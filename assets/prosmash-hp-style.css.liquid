    justify-content: center;
    flex-direction: column;
    align-items: center;
  }
  .prosmash-icon-list .icon-list-container .icon-item .content {
    text-align: center;
  }
  .prosmash-icon-list .icon-list-container .icon-item .content br {
    display: none;
  }
  .featured .featured-products .product-card-v2 {
    margin: 0 auto;
    width: 100%;
  }
