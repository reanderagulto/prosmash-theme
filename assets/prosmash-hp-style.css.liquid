  }
  .cta-section {
    padding: 60px 0;
  }
  .blogs .blogs-container {
    justify-content: center;
    align-items: center;
  }
  .blogs .blogs-container .blog-item {
    width: 100%;
    text-align: center;
  }
  section.blogs {
    padding: 60px 15px;
  }
  .blog-item a {
    width: 100%;
  }
  .blogs .card-content {
    align-items: center;
  }
  .blogs .blogs-container .blog-item .card-img {
    text-align: center;
    margin: 0 auto;
    max-width: 100%;
  }
  .prod-rating {
    justify-content: center;
  }
  
}
@media (max-width: 480px) {
  .featured .featured-products {
    grid-template-columns: 1fr;
  }
  
}