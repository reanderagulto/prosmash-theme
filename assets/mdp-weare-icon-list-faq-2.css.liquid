.mdp-weare-icon-list-2 {
    margin-top: 40px;
    margin-bottom: 40px;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] {
    align-items: stretch;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item {
    display: flex;
    align-items: flex-start;
    justify-content: center;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-media .mdp-icon {
    display: inline-block;
    margin-top: 4px;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data {
    padding-left: 10px;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-header {
    margin-bottom: 20px;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-header .mdp-title {
    color: #2a2a2a;
    text-transform: uppercase;
    font-size: 20px;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-header h3.mdp-title {
    font-family: {{ settings.weare_font_header }};
    font-style: normal;
    font-weight: bold;
    font-size: 24px;
    line-height: 32px;
    color: #343434;
    padding: 14px 0;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data a.mdp-btn-link {
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 22px;
    text-align: center;
    letter-spacing: 0.133333px;
    text-transform: uppercase;
    color: #343434;
    border: 2px solid #343434;
    box-sizing: border-box;
    border-radius: 2px;
    padding: 14px 30px;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-content p:first-child {
    margin-top: 0;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-content p:last-child {
    margin-bottom: 0;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-content a {
    color: {{ settings.link_color }};
    transition: 0.3s all ease-in-out;
    text-decoration: underline;
    display: inline;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-content a:hover {
    color: {{ settings.link_hover_color }};
    transition: color 500ms;
}
.mdp-weare-icon-list-2 .mdp-grid[data-columns][data-gap] .mdp-icon-list-item .mdp-data .mdp-content p {
    font-family: "{{ settings.weare_font_text }}";
    font-style: normal;
    font-weight: 600;
    font-size: {{ settings.mdp_paragraph_font_size }}px;
    line-height: {{ settings.mdp_paragraph_line_height }}em;
    letter-spacing: 0.4px;
    color: {{ settings.mdp_paragraph_color }};
}