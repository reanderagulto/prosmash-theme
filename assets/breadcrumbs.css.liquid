.breadcrumbs {
    margin: 0;
    border-top: 1px solid #DCDCDC;
}

.breadcrumbs__list {
    list-style-type: none;
    margin-top: 20px;
    margin-bottom: 10px;
    padding: 0;
}

.breadcrumbs__item {
    display: inline-block;
}

.breadcrumbs__item a{
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 600;
    font-size: 11px;
    line-height: 15px;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: #7B7B7B;
    text-decoration: none;
}

.breadcrumbs__item:not(:last-child):after {
    content: "";
    display: inline-block;
    background-image: url("../assets/caret-right-solid-new.svg");
    background-repeat: no-repeat;
    width: 8px;
    height: 8px;
}

.breadcrumbs__link {
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 600;
    font-size: 11px;
    line-height: 15px;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: #7B7B7B;
    text-decoration: none;
}

.breadcrumbs__link[aria-current="page"] {
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 600;
    font-size: 11px;
    line-height: 15px;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    color: #7B7B7B;
    text-decoration: none;
}

.breadcrumbs__link[aria-current="page"]:hover,
.breadcrumbs__link[aria-current="page"]:focus {
    text-decoration: underline;
}