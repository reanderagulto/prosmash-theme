    section.blogs {
    padding: 60px 0;
}
.blogs .blogs-container {
    display: flex;
    gap: 32px;
}
.blogs .blogs-container .blog-item {
    width: calc((100% / 3) - 32px);
}
.blogs .blogs-container .blog-item img {
    max-width: 416px;
    width: 100%;
}
.blogs .blogs-container .blog-item a {
    text-decoration: none;
}
.blogs .blogs-container .blog-item .date {
    font-family: "Gabarito", sans-serif;
    color: black;
    font-size: 16px;
    line-height: 120%;
    font-weight: 400;
    padding-top: 24px;
}
.blogs .blogs-container .blog-item .title {
    padding-top: 16px;
    color: black;
    font-family: 'Lexend';
    font-size: 24px;
    font-weight: 700;
    line-height: 120%;
}

@media (max-width: 767px) {
    .blogs .blogs-container {
        flex-wrap: wrap;
    }
    .blogs .blogs-container .blog-item {
        width: calc((100% / 2) - 32px);
    }
}
@media (max-width: 480px) {
    .blogs .blogs-container .blog-item {
        width: 100%;
        text-align: center;
    }
}