.mdp-weare-slideshow-1 .mdp-slide {
    position: relative;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-media {
    background-size: cover;
    background-position: bottom center;
    height: 720px;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 600px;
    text-align: center;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-header .mdp-title {
    font-size: 31.992px;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-content {
    margin-top: 15px;
    font-size: 20px;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-content p:first-child {
    margin-top: 0;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-content p:last-child {
    margin-bottom: 0;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-content a {
    color: #2a2a2a;
    transition: 0.3s all ease-in-out;
    text-decoration: underline;
    display: inline;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-content a:hover {
    color: #5838e9;
    transform: scale(1.5);
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-footer .mdp-button {
    margin-top: 30px;
    border-radius: 0;
    background-image: none !important;
    cursor: pointer;
    width: auto;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: bold;
    padding: 15px 45px;
    font-size: 14px;
    line-height: 19px;
    background-color: #343434;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    border-color: #4c90c7;
    color: white;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-footer .mdp-button:hover {
    background-color: white;
    color: #2a2a2a;
}
.mdp-weare-slideshow-1 .mdp-slide .mdp-data .mdp-footer .mdp-button::before {
    content: none;
}
.mdp-weare-slideshow-1 .mdp-slide.mdp-inverted .mdp-data .mdp-header .mdp-title {
    color: white;
}
.mdp-weare-slideshow-1 .mdp-slide.mdp-inverted .mdp-data .mdp-content {
    color: white;
}
.mdp-weare-slideshow-1 .mdp-slide.mdp-inverted .mdp-data .mdp-footer .mdp-button {
    text-transform: uppercase;
    padding: 9px 15px;
    font-family: var(--font-body-family);
    font-style: normal;
    font-weight: 600;
    border-radius: 0;
    background-image: none !important;
    background-color: white;
    font-size: 14px;
    border-color: white;
    color: #2a2a2a;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-slideshow-1 .mdp-slide.mdp-inverted .mdp-data .mdp-footer .mdp-button:hover {
    background-color: #5838e9;
    border-color: #5838e9;
    color: white;
}
.swiper-pagination-slideshow-1{
    position: unset;
    margin-top: 80px;
}
.swiper-pagination-slideshow-1 .swiper-pagination-bullet,
.swiper-pagination-slideshow-1 .mdp-pagination-img{
    width: 200px;
    height: 236px;
    opacity: 1;
}
.swiper-pagination-slideshow-1 .swiper-pagination-bullet:not(:last-child) {
    margin-right: 30px !important;
}
.swiper-pagination-slideshow-1 .swiper-pagination-bullet{
    border: 2px solid white;
    border-radius: 0;
}
.swiper-pagination-slideshow-1 .swiper-pagination-bullet:hover{
    border: 2px solid {{ settings.link_hover_color }};
    border-radius: 0;
}
.swiper-pagination-slideshow-1 .swiper-pagination-bullet-active{
    border: 2px solid {{ settings.link_color }};
    border-radius: 0;
}

.swiper-button-prev-slideshow-1:after,
.swiper-button-next-slideshow-1:after{
    color: white;
}

.swiper-button-prev-slideshow-1:hover:after,
.swiper-button-next-slideshow-1:hover:after{
    color: {{ settings.link_hover_color }};
}

