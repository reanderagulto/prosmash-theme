.categories {
    padding-bottom: 60px;
}

.heading-container h3 {
    padding: 0;
    margin: 0;
    padding-bottom: 40px;
    line-height: 120%;
    font-family: var(--font-lexend);
    text-align: center;
    text-transform: uppercase;
    color: var(--black);
}
.categories .item-title {
    font-size: 20px;
    font-family: var(--font-lexend);
    font-weight: 700;
    line-height: 120%;
    color: var(--black);
}

.categories-grid {
    display: flex;
    flex-wrap: nowrap;
    gap: 16px;
    justify-content: center;
    align-items: center;
}
.categories-grid .category-item {
    transition: 0.3s;
}
.categories-grid .category-item:hover {
    transform: translateY(-5px);
}

.categories-grid .img-container {
    max-width: 205px;
    width: 100%;
    height: 205px;
    padding-bottom: 24px;
}
.categories-grid .img-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.categories-grid .category-item a {
    text-decoration: none;
    text-align: center;
    font-family: var(--font-lexend);
    color: var(--black);
    text-transform: uppercase;
    display: inline-block;
}
.categories-grid .category-item h3 {
    padding: 24px 0 0;
    margin: 0;
}

@media (max-width: 1024px) {
    .categories-grid {
        flex-wrap: wrap;
    }
    .new-products .mdp-container {
        flex-direction: column;
        text-align: center;
        gap: 25px;
    }
    .new-products .mdp-container .col-left,
    .new-products .mdp-container .col-right {
        width: 100%;
    }
}
@media (max-width: 767px) {
    .new-products .col-right .product-grid .product-card .prod-img {
        height: auto;
    }
    .new-products .col-right .product-grid .product-card .prod-title {
        font-size: 16px;
        padding-top: 12px;
    }
}