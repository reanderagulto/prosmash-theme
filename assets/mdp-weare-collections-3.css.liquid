.mdp-weare-collections-3 {
    margin-top: 80px;
    margin-bottom: 80px;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection {
    position: relative;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-media .mdp-placeholder {
    background-color: transparent;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-media .mdp-image {
    width: 100%;
    margin: auto;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box {
    display: none;
    position: absolute;
    background-color: rgba(255, 255, 255, 0.9);
    width: 60%;
    z-index: 9;
    left: 20%;
    top: 50%;
    transform: translateY(-50%);
    transition: 0.3s all ease-in-out;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box .mdp-content-box-header {
    margin-top: 35px;
    margin-bottom: 15px;
    font-family: {{ settings.weare_font_header }};
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 16px;
    text-align: center;
    letter-spacing: 0.2px;
    color: #343434;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box .mdp-content-box-header span {
    font-size: 24px;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box ul {
    list-style-type: none;
    margin-top: 0;
    margin-bottom: 35px;
    padding: 0;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box ul li {
    margin-bottom: 10px;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 600;
    font-size: 14px;
    line-height: 24px;
    text-align: center;
    color: {{ settings.link_color }};
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box ul li a {
    transition: 0.3s all ease-in-out;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box ul li a:hover {
    transform: scale(1.1);
    color: {{ settings.link_hover_color }};
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-content-box .mdp-line-box {
    z-index: 99;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #343434;
    width: 100%;
    height: 3px;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-button-box {
    z-index: 9;
    position: absolute;
    text-align: center;
    display: block;
    width: 100%;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-button-box .mdp-button-shop {
    display: none;
    min-width: 100px;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: bold;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
    letter-spacing: 0.342857px;
    text-transform: uppercase;
    color: #343434;
    background-color: white;
    display: inline-block;
    padding: 11px 15px;
    border-bottom: 3px solid #343434;
    border-top-left-radius: 2px;
    border-top-right-radius: 2px;
    opacity: 1;
}

.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-data {
    position: absolute;
    left: 30px;
    right: 30px;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
    padding: 30px;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-data .mdp-header .mdp-title {
    font-size: 24px;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-data .mdp-content {
    margin-top: 10px;
    overflow-wrap: break-word;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-data .mdp-footer .mdp-button-shop {
    margin-top: 20px;
    border-radius: 0;
    background-image: none !important;
    cursor: pointer;
    width: auto;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: bold;
    padding: 15px 45px;
    font-size: 14px;
    line-height: 19px;
    background-color: #343434;
    text-align: center;
    letter-spacing: 0.4px;
    text-transform: uppercase;
    border-color: #4c90c7;
    color: white;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-data .mdp-footer .mdp-button-shop:hover {
    background-color: white;
    color: #2a2a2a;
}
.mdp-weare-collections-3 > .mdp-grid > .mdp-collection .mdp-data .mdp-footer .mdp-button-shop::before {
    content: none;
}
.mdp-weare-collections-3[data-variant=style_2] > .mdp-grid > .mdp-collection .mdp-media {
    background-color: #2a2a2a;
}
.mdp-weare-collections-3[data-variant=style_2] > .mdp-grid > .mdp-collection .mdp-data .mdp-header .mdp-title {
    color: white;
}
.mdp-weare-collections-3[data-variant=style_2] > .mdp-grid > .mdp-collection .mdp-data .mdp-content {
    color: white;
}
.mdp-weare-collections-3[data-variant=style_2] > .mdp-grid > .mdp-collection .mdp-data .mdp-footer .mdp-button-shop {
    margin-top: 20px;
    text-transform: uppercase;
    padding: 9px 15px;
    font-family: {{ settings.weare_font_text }};
    font-style: normal;
    font-weight: 600;
    border-radius: 0;
    background-image: none !important;
    font-size: 14px;
    background-color: white;
    border-color: white;
    color: #2a2a2a;
    transition: 0.3s all ease-in-out;
    display: inline-block;
    white-space: nowrap;
}
.mdp-weare-collections-3[data-variant=style_2] > .mdp-grid > .mdp-collection .mdp-data .mdp-footer .mdp-button-shop:hover {
    background-color: #5838e9;
    border-color: #5838e9;
    color: white;
}

