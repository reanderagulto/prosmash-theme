.prosmash-icon-list {
    padding: 60px 40px;
}

.prosmash-icon-list .icon-list-container {
    display: flex;
    align-items: center;
   justify-content: center;
    gap: 50px;
}
.prosmash-icon-list .icon-list-container .icon-item {
    display: flex;
    gap: 24px;
    width: calc((100% / 3) - 50px);
}
.prosmash-icon-list .icon-list-container .icon-item .content .title {
    font-family: 'Lexend';
    font-size: 24px;
    font-weight: 700;
    line-height: 130%;
    padding-bottom: 20px;
}
.prosmash-icon-list .icon-list-container .icon-item .content .desc {
    font-family: 'Red Hat Display';
    font-size: 16px;
    font-weight: 500;
    line-height: 150%;
    color: black;
}

@media (max-width: 1024px) {
    .prosmash-icon-list .icon-list-container {
        flex-wrap: wrap;
    }
    .prosmash-icon-list .icon-list-container .icon-item {
        width: calc((100% / 2) - 50px);
    }
}
@media (max-width: 767px) {
    .prosmash-icon-list .icon-list-container .icon-item {
        width: 100%;
    }
    .prosmash-icon-list {
        padding: 60px 0;
    }
    .prosmash-icon-list .icon-list-container {
        gap: 25px;
    }
    .prosmash-icon-list .icon-list-container .icon-item {
        justify-content: center;
        flex-direction: column;
        align-items: center;
    }
    .prosmash-icon-list .icon-list-container .icon-item .content {
        text-align: center;
    }
    .prosmash-icon-list .icon-list-container .icon-item .content br {
        display: none;
    }
}