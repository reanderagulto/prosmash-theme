.mdp-title {
    font-family: 'Lexend';
    font-size: 24px !important;
    font-weight: 700;
    text-transform: capitalize !important;
    padding-bottom: 20px;
}
.mdp-content {
    font-size: 16px !important;
    font-family: 'Red Hat Display';
    line-height: 150% !important;
    color: black !important;
    margin: 0;
    padding: 0;
    font-weight: 500;
}
.mdp-data {
    padding-left: 25px !important;
}
.mdp-weare-icon-list-2 .mdp-container .mdp-grid .mdp-icon-list-item:not(:first-child) {
    display: flex !important;
}

@media (max-width: 1024px) {
    .mdp-grid {
        display: grid !important;
        gap: 50px;
        grid-template-columns: 1fr 1fr;
    }
    .mdp-grid[data-columns][data-gap][data-columns="3"][data-gap="10"]>div {
        width: 100% !important;
    }
}
@media (max-width: 767px) {
    .mdp.mdp-weare-icon-list-2 {
        padding-bottom: 0 !important;
        padding-top: 0 !important;
    }
    .mdp-grid {
        grid-template-columns: 1fr;
        gap: 25px;
    }
    .mdp-grid[data-columns][data-gap][data-columns="3"][data-gap="10"]>div {
        justify-content: center;
    }
    .mdp-weare-icon-list-2 .mdp-container .mdp-grid .mdp-icon-list-item {
        flex-direction: column;
        justify-content: center !important;
        align-items: center !important;
    }
}