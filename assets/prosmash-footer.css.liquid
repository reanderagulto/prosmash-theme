.prosmash-footer .mdp-social-icons a {
    display: flex;
    align-items: center;
    gap: 12px;
}
.prosmash-footer .mdp-social-icons a span {
    margin: 0;
    padding: 0;
}
.prosmash-footer .mdp-social-icons a:first-child span {
    padding: 0;
    margin: 0;
}
.prosmash-footer .mdp-social-icons a span {
    font-family: var(--font-body-family);
    font-size: 14px;
    font-weight: 600;
    line-height: 150%;
    color: var(--black)
}
.prosmash-footer .mdp-title {
    font-size: 18px;
    font-family: var(--font-body-family);
    font-weight: 700;
    line-height: 120%;
    color: var(--black);
    margin-bottom: 24px !important;
}
.prosmash-footer .mdp-footer .mdp-item .mdp-text p {
    color: var(--black);
    font-size: 16px;
    font-weight: 500;
    line-height: 150%;
    font-family: var(--font-body-family);
}
.prosmash-footer .mdp-subtitle {
    font-size: 14px !important;
    font-weight: 500 !important;
    line-height: 150% !important;
    color: var(--black) !important;
    margin-bottom: 24px !important;
}
.prosmash-footer .mdp-signup-form form .mdp-row {
    align-items: stretch !important;
}
.prosmash-footer .mdp-submit {
    height: auto;
}
.prosmash-footer input {
    outline: none !important;
}
@media (max-width: 767px) {
    .prosmash-footer .mdp-social-icons a {
        justify-content: center;
    }
    .prosmash-footer .mdp-credentials {
        text-align: center !important;    
    }
}