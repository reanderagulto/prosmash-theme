<div class="mdp mdp-weare-customers-1">
  <div class="mdp-container">
    <div class="mdp-header">
      <h1 class="mdp-title">{{ 'customer.reset_password.title' | t }}</h1>
      <div class="mdp-subtitle">{{ 'customer.reset_password.subtext' | t: email: email }}</div>
    </div>
      {% form 'reset_customer_password' %}

        {{ form.errors | default_errors }}

        <input type="password" value="" name="customer[password]" class="{% if form.errors contains 'password' %} mdp-error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">

        <input type="password" value="" name="customer[password_confirmation]" class="{% if form.errors contains 'password_confirmation' %} mdp-error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">

        <input type="submit" class="" value="{{ 'customer.reset_password.submit' | t }}">

      {% endform %}    
  </div>
</div>