<div class="prosmash-mdp-weare-social-sharing" style="margin-top: 24px;">
  <span>Share the product</span>
  <a target="_blank" 
     href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
    <i class="fab fa-facebook-f"></i>
  </a>
  <a target="_blank" 
     href="#">
    <i class="fa-brands fa-instagram"></i>
  </a>
  <a target="_blank" 
   href="https://twitter.com/intent/tweet?url={{ shop.url | append: share_permalink }}">
  <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 18 18" fill="none">
  <path d="M0.0429282 0L6.84088 9.92807L0 18H1.53961L7.52879 10.9329L12.3679 18H17.6072L10.4268 7.5135L16.7942 0H15.2546L9.73888 6.50866L5.28227 0H0.0429282ZM2.30704 1.2387H4.714L15.3428 16.7611H12.9358L2.30704 1.2387Z" fill="black"/>
</svg>
</a>

  <a target="_blank"
    href="https://www.linkedin.com/sharing/share-offsite/?url={{ shop.url | append: share_permalink }}">
    <i class="fa-brands fa-linkedin-in"></i>
  </a>
  {% comment %} <a target="_blank" 
     href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
    <i class="fab fa-pinterest"></i>
  </a> {% endcomment %}
</div>
