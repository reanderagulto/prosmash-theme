{% if template == 'collection.pro-player-kit' %}
  <div class="player-card player-card-link"
       data-player-name="{{ collection.title | escape }}"
       data-player-desc="{{ collection.description | strip_newlines | escape }}"
       data-player-handle="{{ collection.handle }}">
{% else %}
  <a href="{{ collection.url }}" class="player-card-link">
    <div class="player-card">
{% endif %}
    <div class="player-container">
      <div class="card-featured-image">
        <img src="{{ collection.image | image_url }}" alt="{{ collection.title }}">
      </div>
      <div class="card-content">
        <div class="player-title">{{ collection.title }}</div>
        {% assign first_name = collection.title | split: ' ' | first %}
        <div class="text">Brands that {{ first_name }} wears:</div>
        <div class="brands">
          {% for brand in collection.metafields.custom.brands.value %}
            <img src="{{ brand | image_url: width: 60 }}" alt="Brand logo">
          {% endfor %}
        </div>
      </div>
    </div>
{% if template == 'collection.pro-player-kit' %}
  </div>
{% else %}
    </div>
  </a>
{% endif %}
