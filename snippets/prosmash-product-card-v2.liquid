<div class="product-card-v2">
    <a href="{{ product.url }}">
    <div class="prod-img">
        <div class="img-container">
            <div class="canvas" style="
                background-image: url('{{ product.featured_image | image_url }}');
                background-color: #F0F0F0;
                background-size: cover;
                background-position: center;
                ">
            </div>
            {% if product.metafields.custom.limited_edition == true %}
                <div class="limited-edition">Limited Edition</div>
            {% endif %}
        </div>
        {% comment %} <div class="mdp-add-to-cart mdp-available add-cart-btn"
        data-product-id="{{ product.variants.first.id }}"
        data-add-to-cart="Add to cart"
        data-sold-out="Sold out">
        Add to cart
        </div> {% endcomment %}


        {% assign variant = product.selected_or_first_available_variant %}

        <div class="mdp-add-to-cart mdp-available add-cart-btn {% if variant.inventory_quantity <= 0 and variant.inventory_policy == 'continue' %}pre-order{% endif %}"
            data-product-id="{{ variant.id }}"
            data-quantity="1"
            data-add-to-cart="Add to cart"
            data-sold-out="Sold out"
        >
            {% if variant.inventory_quantity <= 0 and variant.inventory_policy == 'continue' %}
                Pre-order
            {% elsif variant.available %}
                Add to cart
            {% else %}
                Sold out
            {% endif %}
        </div>


    </div>
    <div class="prod-details">
        {% assign brand = product.metafields.custom.brands.value %}
        <div class="brand">
        {% if brand %}
            {{ brand.name }}
        {% else %}
            No brand
        {% endif %}
        </div>
        <div class="prod-title">{{ product.title | truncate: 25 }}</div>
        <div class="prod-price">{{ product.price | money }}</div>
        <div class="prod-rating">
            <div class="stars">
                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
                <img src="{{ 'Star.svg' | asset_url }}" alt="Star">
            </div>
            <div>10 reviews <img src="{{ 'ArrowUpRight.svg' | asset_url }}" alt="Star"></div>
        </div>
    </div>
    </a>
</div>
